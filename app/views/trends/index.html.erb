<div class="min-h-screen bg-neutral-light dark:bg-dark-bg">
  <!-- Page Header -->
  <%= render 'shared/page_header', title: "Trends & Insights", show_back_link: true do %>
    <p class="text-gray-600 dark:text-gray-400 mt-1">Analyze your financial patterns and trends</p>
  <% end %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <!-- Bento Grid Layout -->
    <div class="bento-grid mb-6">
      <!-- Hero Card: Analytics Hub (2x2) -->
      <div class="bento-span-2 bento-row-span-2 bg-gradient-to-br from-secondary to-secondary-dark dark:from-secondary-dark dark:to-primary-dark rounded-2xl shadow-lg p-8 text-white relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -mr-32 -mt-32"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/5 rounded-full -ml-24 -mb-24"></div>
        
        <div class="relative z-10">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-white/20 rounded-2xl mb-6 backdrop-blur-sm">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
            </svg>
          </div>
          
          <h2 class="text-3xl font-bold mb-3">Analytics Hub</h2>
          <p class="text-white/90 text-lg mb-6">
            Your future financial insights dashboard
          </p>
          
          <div class="mt-8 pt-6 border-t border-white/20">
            <p class="text-white/80 text-sm leading-relaxed">
              This is where you'll be able to compare data, apply custom filters, and visualize your financial trends over time. We're building powerful analytics tools to help you understand your spending patterns better.
            </p>
          </div>
        </div>
      </div>

      <!-- Average Spend Card (1x2) -->
      <div class="bento-span-1 bento-row-span-2 bg-gradient-to-br from-red-50 to-white dark:from-red-900/10 dark:to-gray-800 rounded-2xl shadow-lg p-6 border-2 border-accent-coral/30 dark:border-accent-coral/20">
        <div class="flex flex-col h-full">
          <div class="flex-1">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-red-100 dark:bg-red-900/30 rounded-xl mb-4">
              <svg class="w-6 h-6 text-accent-coral dark:text-accent-coral-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
              </svg>
            </div>
            
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Average Monthly Spend</p>
            <p class="text-4xl font-bold text-accent-coral dark:text-accent-coral-light mb-2">
              $0.00
            </p>
          </div>
          
          <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
            <p class="text-sm text-gray-500 dark:text-gray-400">
              <span class="font-semibold text-gray-900 dark:text-white">Coming soon</span>
            </p>
            <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">Based on last 6 months</p>
          </div>
        </div>
      </div>

      <!-- Average Income Card (1x2) -->
      <div class="bento-span-1 bento-row-span-2 bg-gradient-to-br from-green-50 to-white dark:from-green-900/10 dark:to-gray-800 rounded-2xl shadow-lg p-6 border-2 border-secondary/30 dark:border-secondary/20">
        <div class="flex flex-col h-full">
          <div class="flex-1">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-xl mb-4">
              <svg class="w-6 h-6 text-secondary dark:text-secondary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
              </svg>
            </div>
            
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Average Monthly Income</p>
            <p class="text-4xl font-bold text-secondary dark:text-secondary-light mb-2">
              $0.00
            </p>
          </div>
          
          <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
            <p class="text-sm text-gray-500 dark:text-gray-400">
              <span class="font-semibold text-gray-900 dark:text-white">Coming soon</span>
            </p>
            <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">Based on last 6 months</p>
          </div>
        </div>
      </div>

      <!-- Spending Trends Chart (2x2) -->
      <div class="bento-span-2 bento-row-span-2 bg-gradient-to-br from-neutral-light to-white dark:from-dark-bg-elevated dark:to-dark-bg rounded-2xl shadow-lg p-6 border-2 border-primary/20 dark:border-primary-dark/30">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Spending Trends</h3>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Last 6 months</p>
          </div>
          <div class="inline-flex items-center justify-center w-10 h-10 bg-primary/10 dark:bg-primary-light/20 rounded-lg">
            <svg class="w-6 h-6 text-primary dark:text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
            </svg>
          </div>
        </div>
        <div class="h-full flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 dark:from-dark-bg-secondary dark:to-dark-bg rounded-xl border-2 border-dashed border-gray-300 dark:border-gray-600">
          <div class="text-center p-8">
            <svg class="w-20 h-20 mx-auto text-gray-400 dark:text-gray-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            <p class="text-gray-600 dark:text-gray-400 font-medium text-lg">Line Chart Coming Soon</p>
            <p class="text-sm text-gray-500 dark:text-gray-500 mt-2">Visualize spending patterns over time</p>
          </div>
        </div>
      </div>

      <!-- Category Breakdown Chart (2x2) -->
      <div class="bento-span-2 bento-row-span-2 bg-gradient-to-br from-neutral-light to-white dark:from-dark-bg-elevated dark:to-dark-bg rounded-2xl shadow-lg p-6 border-2 border-secondary/20 dark:border-secondary-dark/30">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Category Breakdown</h3>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Current month analysis</p>
          </div>
          <div class="inline-flex items-center justify-center w-10 h-10 bg-accent-gold/10 dark:bg-accent-gold/20 rounded-lg">
            <svg class="w-6 h-6 text-accent-gold-dark dark:text-accent-gold-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" />
            </svg>
          </div>
        </div>
        <div class="h-full flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 dark:from-dark-bg-secondary dark:to-dark-bg rounded-xl border-2 border-dashed border-gray-300 dark:border-gray-600">
          <div class="text-center p-8">
            <svg class="w-20 h-20 mx-auto text-gray-400 dark:text-gray-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" />
            </svg>
            <p class="text-gray-600 dark:text-gray-400 font-medium text-lg">Pie Chart Coming Soon</p>
            <p class="text-sm text-gray-500 dark:text-gray-500 mt-2">Break down expenses by category</p>
          </div>
        </div>
      </div>

      <!-- Savings Rate Card (1x1) -->
      <div class="bento-span-1 bento-row-span-1 bg-gradient-to-r from-yellow-50 to-white dark:from-yellow-900/10 dark:to-gray-800 rounded-2xl shadow-lg p-6 border-2 border-accent-gold/30 dark:border-accent-gold/20">
        <div class="flex items-center justify-between h-full">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Savings Rate</p>
            <p class="text-3xl font-bold text-accent-gold-dark dark:text-accent-gold-light">
              0%
            </p>
          </div>
          <div class="inline-flex items-center justify-center w-12 h-12 bg-yellow-100 dark:bg-yellow-900/30 rounded-xl">
            <svg class="w-6 h-6 text-accent-gold-dark dark:text-accent-gold-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Recurring Count Card (1x1) -->
      <div class="bento-span-1 bento-row-span-1 bg-gradient-to-r from-blue-50 to-white dark:from-blue-900/10 dark:to-gray-800 rounded-2xl shadow-lg p-6 border-2 border-primary/30 dark:border-primary-light/20">
        <div class="flex items-center justify-between h-full">
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Active Recurring</p>
            <p class="text-3xl font-bold text-primary dark:text-primary-light">
              0
            </p>
          </div>
          <div class="inline-flex items-center justify-center w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-xl">
            <svg class="w-6 h-6 text-primary dark:text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Planned Features Card (4x1) -->
      <div class="bento-span-4 bento-row-span-1 bg-gradient-to-r from-neutral-light via-white to-neutral-light dark:from-dark-bg-elevated dark:via-dark-bg dark:to-dark-bg-elevated rounded-2xl shadow-lg p-6 border-2 border-secondary/20 dark:border-secondary-dark/30">
        <div class="flex items-start gap-6 h-full">
          <div class="flex-shrink-0">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-secondary/10 dark:bg-secondary-dark/20 rounded-xl">
              <svg class="w-6 h-6 text-secondary dark:text-secondary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
          </div>
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Planned Analytics Features</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-secondary dark:text-secondary-light flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-sm text-gray-700 dark:text-gray-300">Custom date filters</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-secondary dark:text-secondary-light flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-sm text-gray-700 dark:text-gray-300">Compare time periods</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-secondary dark:text-secondary-light flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-sm text-gray-700 dark:text-gray-300">Export reports</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-secondary dark:text-secondary-light flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-sm text-gray-700 dark:text-gray-300">Spending insights</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

