<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Vantura</h1>
          <p class="text-sm text-gray-600 mt-1">Your cash flow projection tool</p>
        </div>

        <% if @account %>
          <div class="text-right">
            <p class="text-sm text-gray-600">Last synced</p>
            <p class="text-sm font-medium text-gray-900">
              <%= @account.last_synced_at ? time_ago_in_words(@account.last_synced_at) + " ago" : "Never" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if @account %>
      <!-- Account Summary Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <!-- Current Balance -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
          <p class="text-sm font-medium text-gray-600 mb-1">Current Balance</p>
          <p class="text-3xl font-bold text-blue-600">
            $<%= number_with_precision(@account.current_balance, precision: 2) %>
          </p>
          <p class="text-xs text-gray-500 mt-2"><%= @account.display_name %></p>
        </div>

        <!-- Total Transactions -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
          <p class="text-sm font-medium text-gray-600 mb-1">Total Transactions</p>
          <p class="text-3xl font-bold text-gray-900"><%= @total_transactions %></p>
          <p class="text-xs text-gray-500 mt-2">Synced from Up Bank</p>
        </div>

        <!-- Expenses -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
          <p class="text-sm font-medium text-gray-600 mb-1">Expenses</p>
          <p class="text-3xl font-bold text-red-600"><%= @expense_count %></p>
          <p class="text-xs text-gray-500 mt-2">Money out</p>
        </div>

        <!-- Income -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
          <p class="text-sm font-medium text-gray-600 mb-1">Income</p>
          <p class="text-3xl font-bold text-green-600"><%= @income_count %></p>
          <p class="text-xs text-gray-500 mt-2">Money in</p>
        </div>
      </div>

      <!-- Recent Transactions -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-xl font-bold text-gray-900">Recent Transactions</h2>
        </div>

        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @recent_transactions.each do |transaction| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= transaction.transaction_date.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <%= transaction.description %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= transaction.category&.humanize || "Uncategorized" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if transaction.is_hypothetical %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                        Hypothetical
                      </span>
                    <% elsif transaction.status == "HELD" %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        Pending
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Settled
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium <%= transaction.amount < 0 ? 'text-red-600' : 'text-green-600' %>">
                    <%= transaction.amount < 0 ? "-" : "+" %>$<%= number_with_precision(transaction.amount.abs, precision: 2) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    <% else %>
      <!-- No Account Found - Show Sync Instructions -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Welcome to Vantura!</h2>
        <p class="text-gray-600 mb-6">You haven't synced your Up Bank account yet.</p>
        <p class="text-sm text-gray-500 mb-4">Run this in your Rails console to sync your data:</p>
        <code class="bg-gray-100 px-4 py-2 rounded text-sm">UpBank::SyncService.call</code>
      </div>
    <% end %>
  </div>
</div>
