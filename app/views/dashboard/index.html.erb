<div class="min-h-screen bg-neutral-light dark:bg-secondary-dark" data-modal-type-value="transaction">
  <!-- Header -->
  <div class="bg-gradient-to-r from-neutral-light to-white dark:from-secondary-dark dark:to-gray-800 shadow-sm border-b border-primary/20 dark:border-primary-dark/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between flex-wrap gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Vantura</h1>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Your cash flow projection tool</p>
        </div>

        <div class="flex items-center gap-3 flex-wrap">
          <% if @account %>
            <div class="text-right">
              <p class="text-sm text-gray-600 dark:text-gray-400">Last synced</p>
              <p class="text-sm font-medium text-gray-900 dark:text-white">
                <%= @account.last_synced_at ? time_ago_in_words(@account.last_synced_at) + " ago" : "Never" %>
              </p>
            </div>
          <% end %>
          
          <%= render 'shared/settings_button' %>
          <%= render 'shared/theme_toggle' %>
          
          <% if @account %>
            <%= button_to sync_path, method: :post, class: "inline-flex items-center px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark hover:shadow-lg hover:scale-105 transition-all shadow-sm font-medium", data: { controller: "sync", action: "submit->sync#submit", disable_with: "Syncing..." } do %>
              <svg class="w-5 h-5 mr-2" data-sync-target="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              <span>Sync Now</span>
            <% end %>
          <% end %>
          
          <!-- Sign Out -->
          <%= button_to session_path, method: :delete, class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 hover:shadow-lg hover:scale-105 transition-all shadow-sm" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            <span>Sign Out</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Flash Messages -->
  <% if notice || alert %>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <% if notice %>
        <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4 mb-4">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-600 dark:text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-green-800 dark:text-green-200 font-medium"><%= notice %></p>
          </div>
        </div>
      <% end %>
      <% if alert %>
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-4">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-red-600 dark:text-red-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-red-800 dark:text-red-200 font-medium"><%= alert %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <% if @account %>
      <!-- Bento Grid Layout -->
      <div class="bento-grid mb-6">
        <!-- Hero Card: Current Balance (2x2) - Up Bank Orange -->
        <div class="bento-span-2 bento-row-span-2 bg-gradient-to-br from-primary to-primary-dark dark:from-primary dark:to-primary-dark rounded-2xl shadow-lg p-8 text-white relative overflow-hidden">
          <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -mr-32 -mt-32"></div>
          <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/5 rounded-full -ml-24 -mb-24"></div>
          
          <div class="relative z-10">
            <div class="flex items-center justify-between mb-4">
              <div>
                <p class="text-orange-100 text-sm font-medium mb-1">Current Balance</p>
                <p class="text-5xl font-bold mb-2">
                  $<%= number_with_precision(@account.current_balance, precision: 2) %>
                </p>
                <p class="text-orange-100/90 text-sm"><%= @account.display_name %></p>
              </div>
            </div>
            
            <div class="mt-8 pt-6 border-t border-white/20">
              <p class="text-orange-50 text-sm mb-2">
                <%= @current_date.strftime("%B %d, %Y") %>
              </p>
              <div class="flex items-center gap-2">
                <div class="h-2 flex-1 bg-white/20 rounded-full overflow-hidden">
                  <% 
                    days_in_month = @current_date.end_of_month.day
                    current_day = @current_date.day
                    progress = (current_day.to_f / days_in_month * 100).round
                  %>
                  <div class="h-full bg-white rounded-full transition-all w-[<%= progress %>%]"></div>
                </div>
                <span class="text-sm text-orange-100"><%= progress %>%</span>
              </div>
              <p class="text-orange-100/80 text-xs mt-1"><%= @current_date.strftime("%A") %> â€¢ Day <%= current_day %> of <%= days_in_month %></p>
            </div>
          </div>
        </div>

        <!-- Expenses Card (1x2) -->
        <%= link_to transactions_expenses_path(year: @current_date.year, month: @current_date.month), 
            class: "bento-span-1 bento-row-span-2 bg-gradient-to-br from-red-50 to-white dark:from-red-900/10 dark:to-gray-800 rounded-2xl shadow-lg p-6 border-2 border-red-200 dark:border-red-900/30 hover:border-red-400 dark:hover:border-red-600 hover:shadow-xl transition-all cursor-pointer group" do %>
          <div class="flex flex-col h-full">
            <div class="flex-1">
              <div class="inline-flex items-center justify-center w-12 h-12 bg-red-100 dark:bg-red-900/30 rounded-xl mb-4 group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                </svg>
              </div>
              
              <p class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Expenses</p>
              <p class="text-4xl font-bold text-red-600 dark:text-red-400 mb-2">
                $<%= number_with_precision(@expense_total, precision: 2) %>
              </p>
            </div>
            
            <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
              <p class="text-sm text-gray-500 dark:text-gray-400">
                <span class="font-semibold text-gray-900 dark:text-white"><%= @expense_count %></span> transactions
              </p>
              <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">This month</p>
            </div>
          </div>
        <% end %>

        <!-- Income Card (1x2) -->
        <%= link_to transactions_income_path(year: @current_date.year, month: @current_date.month), 
            class: "bento-span-1 bento-row-span-2 bg-gradient-to-br from-green-50 to-white dark:from-green-900/10 dark:to-gray-800 rounded-2xl shadow-lg p-6 border-2 border-secondary/30 dark:border-secondary/20 hover:border-secondary dark:hover:border-secondary hover:shadow-xl transition-all cursor-pointer group" do %>
          <div class="flex flex-col h-full">
            <div class="flex-1">
              <div class="inline-flex items-center justify-center w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-xl mb-4 group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
                </svg>
              </div>
              
              <p class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Income</p>
              <p class="text-4xl font-bold text-green-600 dark:text-green-400 mb-2">
                $<%= number_with_precision(@income_total, precision: 2) %>
              </p>
            </div>
            
            <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
              <p class="text-sm text-gray-500 dark:text-gray-400">
                <span class="font-semibold text-gray-900 dark:text-white"><%= @income_count %></span> transactions
              </p>
              <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">This month</p>
            </div>
          </div>
        <% end %>

        <!-- End of Month Card (2x1) -->
        <div class="bento-span-2 bento-row-span-1 bg-gradient-to-r from-neutral-light via-white to-neutral-light dark:from-gray-800 dark:via-gray-700 dark:to-gray-800 rounded-2xl shadow-lg p-6 border-2 border-primary/20 dark:border-primary-dark/30">
          <div class="flex items-center justify-between h-full">
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">End of Month Projection</p>
              <p class="text-3xl font-bold <%= @end_of_month_balance >= @account.current_balance ? 'text-green-600 dark:text-green-400' : 'text-orange-600 dark:text-orange-400' %>">
                $<%= number_with_precision(@end_of_month_balance, precision: 2) %>
              </p>
            </div>
            <div class="text-right">
              <% balance_change = @end_of_month_balance - @account.current_balance %>
              <div class="inline-flex items-center px-3 py-1 rounded-full <%= balance_change >= 0 ? 'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400' : 'bg-orange-100 dark:bg-orange-900/30 text-orange-700 dark:text-orange-400' %>">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <% if balance_change >= 0 %>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
                  <% else %>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                  <% end %>
                </svg>
                <span class="font-semibold text-sm">
                  <%= balance_change >= 0 ? '+' : '' %>$<%= number_with_precision(balance_change.abs, precision: 2) %>
                </span>
              </div>
            </div>
          </div>
        </div>

        <!-- Quick Actions Card (2x1) - Up Bank Orange -->
        <div class="bento-span-2 bento-row-span-1 bg-gradient-to-r from-primary to-primary-light dark:from-primary-dark dark:to-primary rounded-2xl shadow-lg p-6 text-white">
          <div class="flex items-center justify-between h-full gap-3">
            <div class="flex-1">
              <p class="text-orange-100 text-sm font-medium mb-1">Quick Actions</p>
              <p class="text-white text-lg font-semibold">Manage your finances</p>
            </div>
            <div class="flex gap-2">
              <%= link_to calendar_path, class: "inline-flex items-center justify-center w-12 h-12 bg-white/20 hover:bg-white/30 rounded-xl transition-all backdrop-blur-sm", title: "View Calendar" do %>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              <% end %>
              
              <%= link_to recurring_transactions_path, class: "inline-flex items-center justify-center w-12 h-12 bg-white/20 hover:bg-white/30 rounded-xl transition-all backdrop-blur-sm", title: "Recurring Transactions" do %>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              <% end %>
              
              <button type="button" data-action="click->modal#open" class="inline-flex items-center justify-center w-12 h-12 bg-white/20 hover:bg-white/30 rounded-xl hover:scale-110 hover:shadow-lg transition-all backdrop-blur-sm" title="Add Transaction">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Transactions -->
      <div class="bg-gradient-to-br from-neutral-light to-white dark:from-gray-800 dark:to-secondary-dark rounded-2xl shadow-lg border-2 border-secondary/20 dark:border-secondary-dark">
        <div class="px-6 py-5 border-b border-secondary/20 dark:border-secondary-dark/50 flex items-center justify-between bg-gradient-to-r from-secondary/5 to-transparent dark:from-secondary-dark/20 dark:to-transparent">
          <div>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Recent Transactions</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Your latest activity this month</p>
          </div>
          <%= link_to transactions_all_path(year: @current_date.year, month: @current_date.month), 
                      class: "inline-flex items-center px-4 py-2 bg-primary/10 dark:bg-primary/20 text-primary dark:text-primary-light text-sm font-medium rounded-lg hover:bg-primary/20 dark:hover:bg-primary/30 hover:shadow-md hover:scale-105 transition-all" do %>
            View All
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          <% end %>
        </div>

        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-900">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Description</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Category</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
              <% @recent_transactions.each do |transaction| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-300">
                    <%= transaction.transaction_date.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-300">
                    <%= transaction.description %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%= transaction.category&.humanize || "Uncategorized" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex gap-1">
                      <%= transaction_status_badge(transaction) %>
                      <%= transaction_recurring_badge(transaction) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-semibold">
                    <%= formatted_transaction_amount(transaction) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    <% else %>
      <!-- No Account Found - Guide User to Settings -->
      <div class="bg-gradient-to-br from-neutral-light via-white to-neutral-light dark:from-gray-800 dark:via-secondary-dark dark:to-gray-800 rounded-2xl shadow-lg border-2 border-primary/30 dark:border-primary-dark/30 p-12 text-center">
          <div class="max-w-md mx-auto">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-primary/10 dark:bg-primary/20 rounded-full mb-4">
            <svg class="w-8 h-8 text-primary dark:text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Welcome to Vantura!</h2>
          
          <% if Current.user.up_bank_token.present? %>
            <!-- Token is configured but sync hasn't happened yet -->
            <p class="text-gray-600 dark:text-gray-400 mb-6">Your Up Bank token is configured. Click the button below to sync your data!</p>
            <%= button_to sync_path, method: :post, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary to-primary-light hover:from-primary-dark hover:to-primary text-white rounded-xl hover:shadow-xl hover:scale-105 transition-all font-semibold shadow-lg", data: { disable_with: "Syncing your data..." } do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              Sync Up Bank Data
            <% end %>
          <% else %>
            <!-- No token configured - direct to settings -->
            <p class="text-gray-600 dark:text-gray-400 mb-6">Let's get you set up! Click below to configure your Up Bank token.</p>
            <%= link_to settings_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary to-primary-light hover:from-primary-dark hover:to-primary text-white rounded-xl hover:shadow-xl hover:scale-105 transition-all font-semibold shadow-lg" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              Go to Settings
            <% end %>
            
            <div class="mt-6 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
              <p class="text-sm text-blue-800 dark:text-blue-200">
                <strong>What you'll need:</strong> Your Personal Access Token from 
                <a href="https://developer.up.com.au/" target="_blank" class="underline hover:text-blue-600">developer.up.com.au</a>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <%= render 'shared/transaction_modal', default_transaction_date: Date.today %>
</div>
