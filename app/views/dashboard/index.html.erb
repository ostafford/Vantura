<div class="space-y-6">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
    <p class="text-gray-600 mt-2">Overview of your financial data</p>
  </div>

  <!-- Summary Stats -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-sm font-medium text-gray-500">Total Balance</h3>
      <p class="text-2xl font-bold text-gray-900 mt-2">
        <%= number_to_currency(@total_balance, unit: "$") %>
      </p>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-sm font-medium text-gray-500">Total Transactions</h3>
      <p class="text-2xl font-bold text-gray-900 mt-2"><%= @transaction_count %></p>
    </div>
  </div>

  <!-- Charts -->
  <% if @spending_over_time_data[:datasets].present? && @spending_over_time_data[:datasets].first[:data].any? %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <%= render 'spending_chart' %>
      <%= render 'category_chart' if @category_breakdown_data[:labels].any? %>
    </div>
  <% elsif @category_breakdown_data[:labels].any? %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <%= render 'category_chart' %>
    </div>
  <% end %>

  <% if @budget_progress_data[:labels].present? && @budget_progress_data[:labels].any? %>
    <div class="grid grid-cols-1 gap-6">
      <%= render 'budget_chart' %>
    </div>
  <% end %>

  <!-- Accounts Summary -->
  <div>
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Accounts</h2>
    <% if @accounts.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @accounts.each do |account| %>
          <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
            <h3 class="text-lg font-semibold text-gray-900">
              <%= account.display_name_or_type %>
            </h3>
            <p class="text-sm text-gray-500 mt-1"><%= account.account_type %></p>
            <p class="text-xl font-bold text-gray-900 mt-4">
              <%= number_to_currency(account.balance, unit: "$") %>
            </p>
            <%= link_to "View Account", account_path(account), class: "text-blue-600 hover:text-blue-800 text-sm mt-4 inline-block" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-6 text-center">
        <p class="text-gray-500">No accounts yet. Configure your Up Bank PAT in settings to sync your accounts.</p>
        <%= link_to "Go to Settings", settings_path, class: "mt-4 inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>

  <!-- Recent Transactions -->
  <div>
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Recent Transactions</h2>
    <% if @recent_transactions.any? %>
      <!-- Desktop Table -->
      <div class="hidden md:block bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Account</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @recent_transactions.each do |transaction| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= transaction.description || transaction.raw_text %>
                    </div>
                    <% if transaction.categories.any? %>
                      <div class="text-xs text-gray-500 mt-1">
                        <% transaction.categories.each do |category| %>
                          <span class="inline-block bg-blue-100 text-blue-800 px-2 py-1 rounded mr-1">
                            <%= category.name %>
                          </span>
                        <% end %>
                      </div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= transaction.account.display_name_or_type %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= transaction.settled_at&.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-right <%= transaction.debit? ? 'text-red-600' : 'text-green-600' %>">
                    <%= number_to_currency(transaction.amount_abs, unit: "$") %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      
      <!-- Mobile Card Layout -->
      <div class="md:hidden space-y-4">
        <% @recent_transactions.each do |transaction| %>
          <div class="bg-white rounded-lg shadow p-4">
            <div class="flex justify-between items-start mb-2">
              <div class="flex-1">
                <div class="text-sm font-medium text-gray-900">
                  <%= transaction.description || transaction.raw_text %>
                </div>
                <div class="text-xs text-gray-500 mt-1">
                  <%= transaction.account.display_name_or_type %> â€¢ <%= transaction.settled_at&.strftime("%b %d, %Y") %>
                </div>
              </div>
              <div class="text-sm font-medium <%= transaction.debit? ? 'text-red-600' : 'text-green-600' %> ml-4">
                <%= number_to_currency(transaction.amount_abs, unit: "$") %>
              </div>
            </div>
            <% if transaction.categories.any? %>
              <div class="flex flex-wrap gap-1 mt-2">
                <% transaction.categories.each do |category| %>
                  <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">
                    <%= category.name %>
                  </span>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <%= link_to "View All Transactions", transactions_path, class: "mt-4 inline-block text-blue-600 hover:text-blue-800 min-h-[44px] flex items-center" %>
    <% else %>
      <div class="bg-white rounded-lg shadow p-6 text-center">
        <p class="text-gray-500">No transactions yet. Configure your Up Bank PAT in settings to sync your transactions.</p>
        <%= link_to "Go to Settings", settings_path, class: "mt-4 inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 min-h-[44px] flex items-center justify-center" %>
      </div>
    <% end %>
  </div>
</div>

