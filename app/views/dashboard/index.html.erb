<% content_for :title, "Dashboard - Vantura" %>

<main id="main" data-modal-type-value="transaction" aria-label="Dashboard page">
  <!-- Sync Status Container (shows loading state and completion notification) -->
  <!-- Note: The sync_notification div is now in the application layout for global access -->
  <% if @sync_result&.dig("success") %>
    <script>
      // Show the sync result notification using JavaScript if it's from a redirect
      setTimeout(() => {
        if (window.showNotification) {
          window.showNotification('success', '<%= j "#{@sync_result["new_transactions"]} new transaction#{'s' if @sync_result["new_transactions"] != 1} added" %>');
        }
      }, 100);
    </script>
  <% end %>
  
  <!-- Sync Loading Indicator (hidden by default, shown via Turbo Stream) -->
  <div id="sync_loading"></div>
  
  <!-- Dashboard Header -->
  <%= render 'shared/page_header_simple', title: "Dashboard", subtitle: "Your cash flow projection tool" %>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <% if @account %>
      <!-- Financial Overview Section -->
      <section class="bento-grid mb-6" aria-label="Financial overview statistics">
        <!-- Current Balance Hero Card (2x2) - Using Reusable Partial -->
        <%= render 'shared/bento_cards/hero_card',
            title: "Current Balance",
            subtitle: formatted_balance(@account.current_balance),
            description: "Monitor your account balance in real-time with month-to-date progress tracking. Track your financial activity as you progress through the month with visual indicators and detailed breakdowns.",
            icon: 'wallet',
            size: 'bento-span-2 bento-row-span-2',
            color: 'primary' do %>
          <div class="flex items-center justify-between mb-3">
            <!-- Left: Full date -->
            <div class="text-left">
              <p class="text-orange-50 text-sm">
                <%= day_name(@current_date) %> <%= @current_date.strftime("%B %d, %Y") %>
              </p>
            </div>
            
            <!-- Right: Month progress -->
            <div class="text-right">
              <div class="flex items-center justify-end gap-2">
                <div class="h-2 w-24 bg-white/20 rounded-full overflow-hidden relative">
                  <div class="absolute inset-0 bg-gradient-to-r from-white via-orange-100 to-orange-200 rounded-full" style="width: <%= month_progress(@current_date) %>%"></div>
                </div>
                <span class="text-sm text-orange-100 font-semibold whitespace-nowrap"><%= month_progress(@current_date) %>%</span>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Expenses Card (1x2) - Using Unified Partial -->
        <%= render partial: 'dashboard/transaction_type_card',
            locals: {
              type: 'expense',
              expense_total: @expense_total,
              expense_count: @expense_count,
              current_date: @current_date,
              top_expense_merchants: @top_expense_merchants
            } %>

        <!-- Income Card (1x2) - Using Unified Partial -->
        <%= render partial: 'dashboard/transaction_type_card',
            locals: {
              type: 'income',
              income_total: @income_total,
              income_count: @income_count,
              current_date: @current_date,
              top_income_merchants: @top_income_merchants
            } %>

        <!-- End of Month Projection (2x1) - Using Reusable Partial -->
        <%= render 'dashboard/projection_card',
            income_total: @income_total,
            expense_total: @expense_total,
            end_of_month_balance: @end_of_month_balance,
            current_date: @current_date,
            upcoming_recurring_expenses: @upcoming_recurring_expenses,
            upcoming_recurring_income: @upcoming_recurring_income,
            upcoming_recurring_total: @upcoming_recurring_total %>

        <!-- Net Cash Flow Card (1x2) -->
        <%= render 'dashboard/net_cash_flow_card',
            income_total: @income_total,
            expense_total: @expense_total,
              expense_count: @expense_count,
              income_count: @income_count,
              current_date: @current_date %>
      </section>

      <!-- Recent Transactions -->
      <section class="bg-gradient-to-br from-neutral-100 to-white dark:from-gray-800 dark:to-gray-900 rounded-2xl shadow-lg border-2 border-gray-200 dark:border-gray-700" aria-label="Recent transactions">
        <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between bg-gray-50 dark:bg-gray-800">
          <div>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Recent Transactions</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Your latest activity this month</p>
          </div>
          <%= link_to transactions_path(year: @current_date.year, month: @current_date.month), 
                      class: "inline-flex items-center px-4 py-2 bg-primary-700/10 dark:bg-primary-500/30 text-primary-700 dark:text-primary-300 border border-primary-700/20 dark:border-primary-400/40 text-sm font-medium rounded-lg hover:bg-primary-700/20 dark:hover:bg-primary-500/40 hover:shadow-md hover:scale-105 transition-all" do %>
            View All
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          <% end %>
        </div>

            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <caption class="sr-only">Recent transactions for the current period</caption>
                <thead class="bg-gray-50 dark:bg-gray-900">
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Date</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Description</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Category</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
                  </tr>
                </thead>
                <tbody id="recent_transactions" class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                  <% if @recent_transactions.any? %>
                    <% @recent_transactions.each do |transaction| %>
                      <%= render 'dashboard/recent_transaction_row', transaction: transaction %>
                    <% end %>
                  <% else %>
                    <tr>
                      <td colspan="5" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
                        No transactions for this week.
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </section>

    <% else %>
      <!-- No Account Found - Guide User to Settings -->
      <div class="bg-gradient-to-br from-cream-100 via-white to-cream-100 dark:from-gray-800 dark:via-success-700 dark:to-gray-800 rounded-2xl shadow-lg border-2 border-primary-700/30 dark:border-primary-900/30 p-12 text-center">
          <div class="max-w-md mx-auto">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-700/10 dark:bg-primary-700/20 rounded-full mb-4">
            <svg class="w-8 h-8 text-primary-700 dark:text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Welcome to Vantura!</h2>
          
          <% if Current.user.up_bank_token.present? %>
            <!-- Token is configured but sync hasn't happened yet -->
            <p class="text-gray-600 dark:text-gray-400 mb-6">Your Up Bank token is configured. Click the button below to sync your data!</p>
            <%= button_to sync_path, method: :post, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary to-primary-light hover:from-primary-dark hover:to-primary text-white rounded-xl hover:shadow-xl hover:scale-105 transition-all font-semibold shadow-lg", data: { disable_with: "Syncing your data..." } do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              Sync Up Bank Data
            <% end %>
          <% else %>
            <!-- No token configured - direct to settings -->
            <p class="text-gray-600 dark:text-gray-400 mb-6">Let's get you set up! Click below to configure your Up Bank token.</p>
            <%= link_to settings_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary to-primary-light hover:from-primary-dark hover:to-primary text-white rounded-xl hover:shadow-xl hover:scale-105 transition-all font-semibold shadow-lg" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              Go to Settings
            <% end %>
            
            <div class="mt-6 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
              <p class="text-sm text-blue-800 dark:text-blue-200">
                <strong>What you'll need:</strong> Your Personal Access Token from 
                <a href="https://developer.up.com.au/" target="_blank" class="underline hover:text-blue-600">developer.up.com.au</a>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <%= render 'shared/transaction_drawer', default_transaction_date: Date.today %>
</main>
