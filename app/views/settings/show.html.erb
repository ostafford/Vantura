<div class="space-y-6">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Settings</h1>
    <p class="text-gray-600 mt-2">Manage your account settings and Up Bank integration</p>
  </div>

  <!-- PAT Configuration -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Up Bank Personal Access Token</h2>
    
    <%= form_with model: @user, url: settings_path, method: :patch, local: true do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :up_pat, "Personal Access Token", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :up_pat, 
              class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
              placeholder: "up:yeah:...",
              value: "" %>
          <p class="mt-2 text-sm text-gray-500">
            Your PAT is encrypted and stored securely. Leave blank to keep your current token.
            <%= link_to "Get your PAT from Up Bank", "https://api.up.com.au/getting_started", target: "_blank", class: "text-blue-600 hover:text-blue-800 underline" %>
          </p>
          <% if @user.up_pat_configured? %>
            <p class="mt-2 text-sm text-green-600">
              ✓ PAT is configured
            </p>
          <% else %>
            <p class="mt-2 text-sm text-amber-600">
              ⚠ PAT is not configured. Please enter your token to sync your data.
            </p>
          <% end %>
        </div>

        <%= f.submit "Update Settings", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- Sync Status -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Sync Status</h2>
    
    <div class="space-y-4">
      <% if @user.last_synced_at %>
        <div>
          <p class="text-sm text-gray-500">Last synced</p>
          <p class="text-lg font-medium text-gray-900"><%= @user.last_synced_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        </div>
      <% else %>
        <div>
          <p class="text-sm text-gray-500">Last synced</p>
          <p class="text-lg font-medium text-gray-600">Never</p>
        </div>
      <% end %>

      <%= button_to "Sync Now", sync_now_settings_path, method: :post, 
          class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors",
          disabled: !@user.up_pat_configured? %>
      
      <% unless @user.up_pat_configured? %>
        <p class="text-sm text-gray-500">Configure your PAT above to enable syncing</p>
      <% end %>
    </div>
  </div>

  <!-- Account Info -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Account Information</h2>
    
    <div class="space-y-2">
      <div>
        <p class="text-sm text-gray-500">Email</p>
        <p class="text-lg font-medium text-gray-900"><%= @user.email %></p>
      </div>
    </div>
  </div>
</div>

