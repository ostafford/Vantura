<% content_for :title, "Recurring Transactions - Vantura" %>

<div class="min-h-screen bg-neutral-light dark:bg-dark-bg">
  <!-- Header -->
  <div class="bg-gradient-to-r from-neutral-light to-white dark:from-dark-bg dark:to-dark-bg-secondary shadow-sm border-b border-primary/20 dark:border-primary-dark/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Manage Recurring Transactions</h1>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            <%= link_to "← Back to Dashboard", root_path, class: "text-primary dark:text-primary-light hover:text-primary-dark dark:hover:text-primary font-medium" %>
          </p>
        </div>

        <div class="text-right">
          <p class="text-sm text-gray-600 dark:text-gray-400">Active Patterns</p>
          <p class="text-3xl font-bold text-primary dark:text-primary-light">
            <%= @recurring_transactions.active.count %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-gradient-to-br from-neutral-light to-white dark:from-dark-bg-elevated dark:to-dark-bg rounded-lg shadow-sm border-2 border-secondary/20 dark:border-dark-bg-elevated/50">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white">Recurring Patterns</h2>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-900">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Description</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Frequency</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Next Occurrence</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
            <% @recurring_transactions.each do |recurring| %>
              <%= render "recurring_transaction", recurring: recurring %>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @recurring_transactions.empty? %>
        <div class="px-6 py-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No recurring patterns</h3>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Mark transactions as recurring to see them here.</p>
          <div class="mt-4">
            <%= link_to transactions_all_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 hover:shadow-lg hover:scale-105 transition-all shadow-md" do %>
              Browse Transactions
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

