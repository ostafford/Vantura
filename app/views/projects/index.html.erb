<div class="flex items-center justify-between mb-4">
  <h1 class="text-2xl font-semibold">Projects</h1>
  <%= link_to "New Project", new_project_path, class: "px-3 py-2 bg-primary-600 text-white rounded" %>
</div>

<div class="bg-white dark:bg-gray-900 shadow rounded">
  <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
    <thead class="bg-gray-50 dark:bg-gray-800">
      <tr>
        <th class="px-4 py-2 text-left text-sm font-medium">Name</th>
        <th class="px-4 py-2 text-left text-sm font-medium">Participants</th>
        <th class="px-4 py-2"></th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 dark:divide-gray-800">
      <% @projects.each do |project| %>
        <tr>
          <td class="px-4 py-2"><%= link_to project.name, project_path(project), class: "text-primary-700 dark:text-primary-400" %></td>
          <td class="px-4 py-2">
            <%= (project.participants.map { |u| u.name.presence || u.email_address }).join(", ") %>
          </td>
          <td class="px-4 py-2 text-right">
            <%= link_to "View", project_path(project), class: "text-sm text-primary-700 dark:text-primary-400" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if @projects.empty? %>
    <div class="p-6 text-gray-500">No projects yet.</div>
  <% end %>
  </div>


