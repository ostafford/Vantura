<%# Update the Hero Card %>
<%= turbo_stream.replace "projects_hero_card" do %>
  <div id="projects_hero_card">
    <%= render 'shared/bento_cards/hero_card',
        title: "Projects Hub",
        subtitle: @total_expenses_cents > 0 ? format_cents(@total_expenses_cents) : "No expenses yet",
        description: "Track and manage shared expense projects. Collaborate with team members, split costs equally, and monitor project spending across all your active projects.",
        icon: 'chart',
        size: 'bento-span-2 bento-row-span-2',
        color: 'primary' do %>
    <div class="mt-6 space-y-4">
      <% if @total_projects > 0 %>
        <div class="flex items-center justify-between pb-3 border-b border-white/20">
          <span class="text-white/80 text-sm">Total Projects</span>
          <span class="text-2xl font-bold text-white"><%= @total_projects %></span>
        </div>
        <div class="flex items-center justify-between pb-3 border-b border-white/20">
          <span class="text-white/80 text-sm">Active Projects</span>
          <span class="text-xl font-semibold text-white"><%= @active_projects %></span>
        </div>
        <% if @largest_expense %>
          <div class="flex items-center justify-between pb-3 border-b border-white/20">
            <span class="text-white/80 text-sm">Largest Expense</span>
            <span class="text-xl font-semibold text-white"><%= format_cents(@largest_expense.total_cents) %></span>
          </div>
        <% end %>
        <% if @most_active_project %>
          <div class="flex items-center justify-between">
            <span class="text-white/80 text-sm">Most Active</span>
            <span class="text-lg font-semibold text-white truncate ml-2"><%= @most_active_project.name %></span>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-4">
          <p class="text-white/80 text-sm">Get started by creating your first project</p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<% end %>

<%# Update all stat cards %>
<%= turbo_stream.replace "total_projects_card" do %>
  <%= render 'shared/bento_cards/stat_card',
      id: 'total_projects_card',
      title: "Total Projects",
      value: @total_projects.to_s,
      subtitle: "<span class='font-semibold text-gray-900 dark:text-white'>#{@active_projects}</span> active".html_safe,
      detail: "Across all projects",
      icon: 'chart',
      color: 'blue',
      size: 'bento-span-1 bento-row-span-2' %>
<% end %>

<%= turbo_stream.replace "total_expenses_card" do %>
  <%= render 'shared/bento_cards/stat_card',
      id: 'total_expenses_card',
      title: "Total Expenses",
      value: format_cents(@total_expenses_cents),
      subtitle: "<span class='font-semibold text-gray-900 dark:text-white'>#{@total_projects}</span> projects".html_safe,
      detail: "All time",
      icon: 'dollar',
      color: 'red',
      size: 'bento-span-1 bento-row-span-2' %>
<% end %>

<%= turbo_stream.replace "total_participants_card" do %>
  <%= render 'shared/bento_cards/stat_card',
      id: 'total_participants_card',
      title: "Total Participants",
      value: @total_participants.to_s,
      subtitle: "<span class='font-semibold text-gray-900 dark:text-white'>#{@total_projects}</span> projects".html_safe,
      detail: "Unique members",
      icon: 'chart',
      color: 'blue',
      size: 'bento-span-1 bento-row-span-2' %>
<% end %>

<%= turbo_stream.replace "active_projects_card" do %>
  <%= render 'shared/bento_cards/stat_card',
      id: 'active_projects_card',
      title: "Active Projects",
      value: @active_projects.to_s,
      subtitle: "<span class='font-semibold text-gray-900 dark:text-white'>#{@total_projects - @active_projects}</span> inactive".html_safe,
      detail: "With expenses",
      icon: 'arrow-up',
      color: 'green',
      size: 'bento-span-1 bento-row-span-2' %>
<% end %>

<%# Update the table body %>
<%= turbo_stream.replace "projects_table_body" do %>
  <tbody id="projects_table_body" class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
    <% if @projects.any? %>
      <% @projects.each do |project| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to project.name, project_path(project), class: "text-primary-700 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300 font-medium" %>
          </td>
          <td class="px-6 py-4">
            <div class="text-sm text-gray-900 dark:text-gray-100">
              <%= (project.participants.map { |u| user_display_name(u) }).join(", ") %>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <%= link_to "View", project_path(project), class: "text-primary-700 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300" %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="3" class="px-6 py-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No projects</h3>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by creating your first project.</p>
          <%= link_to "New Project", new_project_path, class: "mt-4 inline-flex items-center px-4 py-2 bg-primary-600 hover:bg-primary-700 dark:bg-primary-500 dark:hover:bg-primary-600 text-white rounded-lg font-medium transition-colors" %>
        </td>
      </tr>
    <% end %>
  </tbody>
<% end %>

<%# Show success notification %>
<%= turbo_stream.append "notifications" do %>
  <div data-controller="notification"
       data-notification-type-value="success"
       data-notification-auto-dismiss-value="true"
       data-notification-dismiss-after-value="5000"
       class="w-96 bg-white/95 dark:bg-primary-700/95 backdrop-blur-sm border-2 border-success-500/40 dark:border-success-700 rounded-xl shadow-xl pointer-events-auto overflow-hidden transform translate-x-full opacity-0 transition-all duration-300 ease-out">
    <div class="p-4">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-success-500 dark:text-success-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-3 w-0 flex-1 pt-0.5">
          <p class="text-success-700 dark:text-success-300 text-sm font-medium">
            Project created successfully!
          </p>
          <p class="text-success-600 dark:text-success-400 text-xs mt-1">
            <%= @project.name %>
          </p>
        </div>
        <div class="ml-4 flex-shrink-0 flex">
          <button type="button" 
                  data-action="click->notification#dismiss"
                  class="text-success-500 dark:text-success-300 hover:text-success-700 dark:hover:text-success-500">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>

