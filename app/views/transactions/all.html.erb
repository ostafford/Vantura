<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <!-- Header -->
  <div class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">All Transactions</h1>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            <%= link_to "← Back to Dashboard", root_path, class: "text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300" %>
          </p>
        </div>

        <div class="flex gap-3">
          <!-- Expenses Card -->
          <div class="bg-white dark:bg-gray-800 border border-red-200 dark:border-red-800 rounded-lg px-4 py-3 shadow-sm">
            <p class="text-xs font-medium text-gray-600 dark:text-gray-400 mb-1">Expenses</p>
            <p class="text-xl font-bold text-red-600 dark:text-red-400">
              $<%= number_with_precision(@expense_total, precision: 2) %>
            </p>
          </div>
          
          <!-- Income Card -->
          <div class="bg-white dark:bg-gray-800 border border-green-200 dark:border-green-800 rounded-lg px-4 py-3 shadow-sm">
            <p class="text-xs font-medium text-gray-600 dark:text-gray-400 mb-1">Income</p>
            <p class="text-xl font-bold text-green-600 dark:text-green-400">
              $<%= number_with_precision(@income_total, precision: 2) %>
            </p>
          </div>
          
          <!-- Transaction Count -->
          <div class="bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg px-4 py-3 flex items-center">
            <div class="text-center">
              <p class="text-xl font-bold text-gray-900 dark:text-white"><%= @transactions.count %></p>
              <p class="text-xs text-gray-500 dark:text-gray-400">transactions</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Month Navigation & Filter -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4">
      <div class="flex items-center justify-between">
        <!-- Month Navigation -->
        <div class="flex gap-3">
          <%= link_to transactions_all_month_path(@date.prev_month.year, @date.prev_month.month, filter: @filter_type),
                      class: "inline-flex items-center px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Previous
          <% end %>

          <%= link_to transactions_all_month_path(@date.next_month.year, @date.next_month.month, filter: @filter_type),
                      class: "inline-flex items-center px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors" do %>
            Next
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          <% end %>
        </div>

        <!-- Month Display -->
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
          <%= @date.strftime("%B %Y") %>
        </h2>

        <!-- Filter Dropdown -->
        <div class="relative">
          <label for="filter" class="sr-only">Filter transactions</label>
          <select id="filter" name="filter" 
                  onchange="window.location.href='<%= transactions_all_month_path(@year, @month) %>?filter=' + this.value"
                  class="block px-4 py-2 pr-10 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent cursor-pointer">
            <option value="all" <%= 'selected' if @filter_type == 'all' %>>All Transactions</option>
            <option value="expenses" <%= 'selected' if @filter_type == 'expenses' %>>Expenses Only</option>
            <option value="income" <%= 'selected' if @filter_type == 'income' %>>Income Only</option>
            <option value="hypothetical" <%= 'selected' if @filter_type == 'hypothetical' %>>Hypothetical Only</option>
          </select>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white">
          <%= case @filter_type
              when "expenses" then "Expense Transactions"
              when "income" then "Income Transactions"
              when "hypothetical" then "Hypothetical Transactions"
              else "All Transactions"
              end %>
        </h2>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-900">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Description</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Category</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
            <% @transactions.each do |transaction| %>
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 <%= transaction.is_hypothetical ? 'bg-purple-50 dark:bg-purple-900/20' : '' %>">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-300">
                  <%= transaction.transaction_date.strftime("%b %d, %Y") %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-300">
                  <%= transaction.description %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%= transaction.category&.humanize || "Uncategorized" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if transaction.is_hypothetical %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                      Hypothetical
                    </span>
                  <% elsif transaction.status == "HELD" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      Pending
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Settled
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium <%= transaction.amount < 0 ? 'text-red-600 dark:text-red-400' : 'text-green-600 dark:text-green-400' %>">
                  <%= transaction.amount < 0 ? "-" : "+" %>$<%= number_with_precision(transaction.amount.abs, precision: 2) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-right">
                  <div class="flex gap-2 justify-end">
                    <% if transaction.is_hypothetical && !transaction.recurring? %>
                      <%= button_to transaction_path(transaction), method: :delete, 
                          data: { confirm: "Remove this transaction?" },
                          class: "inline-flex items-center px-3 py-1 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors text-xs font-medium" do %>
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Remove
                      <% end %>
                    <% elsif !transaction.is_hypothetical && !transaction.recurring? %>
                      <button onclick="openRecurringModal(<%= transaction.id %>, '<%= j transaction.description %>', <%= transaction.amount %>, '<%= transaction.transaction_date %>')" 
                              class="inline-flex items-center px-3 py-1 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors text-xs font-medium">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                        Make Recurring
                      </button>
                    <% elsif transaction.recurring? %>
                      <span class="inline-flex items-center px-3 py-1 bg-purple-100 text-purple-700 rounded-lg text-xs font-medium">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                        Recurring
                      </span>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @transactions.empty? %>
        <div class="px-6 py-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No transactions</h3>
          <p class="mt-1 text-sm text-gray-500">No transactions found for the selected filter.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Recurring Transaction Modal -->
  <div id="recurringModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 z-50 flex items-center justify-center p-4" style="display: none;">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
      <div class="bg-blue-600 px-6 py-4 rounded-t-lg">
        <div class="flex items-center justify-between">
          <h3 class="text-xl font-bold text-white">Make Recurring</h3>
          <button onclick="closeRecurringModal()" class="text-white hover:text-gray-200">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <p class="text-blue-100 text-sm mt-1">Automatically project this transaction into the future</p>
      </div>

      <%= form_with url: recurring_transactions_path, method: :post, class: "p-6", id: "recurringForm" do |f| %>
        <%= f.hidden_field :transaction_id, id: "recurringTransactionId" %>
        
        <div class="space-y-4">
          <!-- Transaction Preview -->
          <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
            <p class="text-sm font-medium text-gray-700 mb-2">Transaction:</p>
            <p class="text-lg font-semibold text-gray-900" id="recurringDescription">-</p>
            <p class="text-sm text-gray-600 mt-1">Amount: <span id="recurringAmount" class="font-medium">-</span></p>
          </div>

          <!-- Frequency Selection -->
          <div>
            <label for="frequency" class="block text-sm font-medium text-gray-700 mb-2">How often does this occur?</label>
            <select name="frequency" id="frequency" required 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              <option value="">Select frequency...</option>
              <option value="weekly">Weekly (every 7 days)</option>
              <option value="fortnightly">Fortnightly (every 14 days)</option>
              <option value="monthly">Monthly</option>
              <option value="quarterly">Quarterly (every 3 months)</option>
              <option value="yearly">Yearly</option>
            </select>
          </div>

          <!-- Next Occurrence Date -->
          <div>
            <label for="next_occurrence_date" class="block text-sm font-medium text-gray-700 mb-1">
              When is the next occurrence?
            </label>
            <%= f.date_field :next_occurrence_date, 
                id: "nextOccurrenceDate",
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                required: true %>
            <p class="text-xs text-gray-500 mt-1">We'll project future occurrences from this date</p>
          </div>

          <!-- Projection Duration -->
          <div>
            <label for="projection_months" class="block text-sm font-medium text-gray-700 mb-1">
              How far ahead to project?
            </label>
            <select name="projection_months" id="projection_months" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              <option value="indefinite" selected>Indefinite (recommended)</option>
              <option value="3">3 months</option>
              <option value="6">6 months</option>
              <option value="12">12 months</option>
              <option value="24">24 months</option>
            </select>
            <p class="text-xs text-gray-500 mt-1">Indefinite will continue projecting as you navigate future months</p>
          </div>

          <!-- Amount Tolerance -->
          <div>
            <label for="amount_tolerance" class="block text-sm font-medium text-gray-700 mb-1">
              Amount matching tolerance
            </label>
            <div class="relative">
              <span class="absolute left-4 top-2 text-gray-500">±$</span>
              <%= f.number_field :amount_tolerance, 
                  step: 0.01,
                  value: 1.0,
                  class: "w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                  min: 0 %>
            </div>
            <p class="text-xs text-gray-500 mt-1">Allows matching transactions with slightly different amounts</p>
          </div>

          <!-- Info Box -->
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-3">
            <p class="text-xs text-blue-800">
              <strong>How it works:</strong> We'll automatically add this transaction to future months in your calendar. 
              When Up Bank syncs the real transaction, we'll match and replace it automatically.
            </p>
          </div>
        </div>

        <div class="mt-6 flex gap-3">
          <%= f.submit "Create Recurring Pattern", 
              class: "flex-1 bg-blue-600 text-white px-4 py-3 rounded-lg hover:bg-blue-700 transition-colors font-semibold" %>
          <button type="button" onclick="closeRecurringModal()" 
                  class="px-4 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors font-semibold">
            Cancel
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  let currentRecurringTransactionId = null;
  let currentTransactionDate = null;
  
  function openRecurringModal(transactionId, description, amount, transactionDate) {
    currentRecurringTransactionId = transactionId;
    currentTransactionDate = transactionDate;
    
    document.getElementById('recurringTransactionId').value = transactionId;
    document.getElementById('recurringDescription').textContent = description;
    
    const formattedAmount = (amount < 0 ? '-' : '+') + '$' + Math.abs(amount).toFixed(2);
    const amountColor = amount < 0 ? 'text-red-600' : 'text-green-600';
    document.getElementById('recurringAmount').textContent = formattedAmount;
    document.getElementById('recurringAmount').className = 'font-medium ' + amountColor;
    
    // Update next occurrence date when frequency changes
    updateNextOccurrenceDate();
    
    const modal = document.getElementById('recurringModal');
    modal.classList.remove('hidden');
    modal.style.display = 'flex';
  }
  
  function updateNextOccurrenceDate() {
    const frequency = document.getElementById('frequency').value;
    if (!frequency || !currentTransactionDate) return;
    
    const txnDate = new Date(currentTransactionDate);
    let nextDate = new Date(txnDate);
    
    switch(frequency) {
      case 'weekly':
        nextDate.setDate(nextDate.getDate() + 7);
        break;
      case 'fortnightly':
        nextDate.setDate(nextDate.getDate() + 14);
        break;
      case 'monthly':
        nextDate.setMonth(nextDate.getMonth() + 1);
        break;
      case 'quarterly':
        nextDate.setMonth(nextDate.getMonth() + 3);
        break;
      case 'yearly':
        nextDate.setFullYear(nextDate.getFullYear() + 1);
        break;
    }
    
    // Format as YYYY-MM-DD for date input
    const formatted = nextDate.toISOString().split('T')[0];
    document.getElementById('nextOccurrenceDate').value = formatted;
  }
  
  // Add event listener for frequency change
  document.getElementById('frequency')?.addEventListener('change', updateNextOccurrenceDate);
  
  function closeRecurringModal() {
    const modal = document.getElementById('recurringModal');
    modal.classList.add('hidden');
    modal.style.display = 'none';
    document.getElementById('recurringForm').reset();
    currentRecurringTransactionId = null;
  }
  
  // Close modal on escape key
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      closeRecurringModal();
    }
  });
  
  // Close modal on background click
  document.getElementById('recurringModal')?.addEventListener('click', function(event) {
    if (event.target === this) {
      closeRecurringModal();
    }
  });
</script>

