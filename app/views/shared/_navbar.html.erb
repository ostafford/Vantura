<nav class="bg-gray-800 text-white shadow-lg">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center">
        <%= link_to "Vantura", root_path, class: "text-xl font-bold hover:text-gray-300" %>
        
        <!-- Desktop Navigation -->
        <div class="hidden md:flex md:items-center md:space-x-6 md:ml-8">
          <%= link_to "Dashboard", root_path, class: "hover:text-gray-300 px-3 py-2 rounded-md text-sm font-medium min-h-[44px] flex items-center" %>
          <%= link_to "Accounts", accounts_path, class: "hover:text-gray-300 px-3 py-2 rounded-md text-sm font-medium min-h-[44px] flex items-center" %>
          <%= link_to "Transactions", transactions_path, class: "hover:text-gray-300 px-3 py-2 rounded-md text-sm font-medium min-h-[44px] flex items-center" %>
          <%= link_to "Budgets", budgets_path, class: "hover:text-gray-300 px-3 py-2 rounded-md text-sm font-medium min-h-[44px] flex items-center" %>
          <%= link_to "Investment Goals", investment_goals_path, class: "hover:text-gray-300 px-3 py-2 rounded-md text-sm font-medium min-h-[44px] flex items-center" %>
          <%= link_to "Settings", settings_path, class: "hover:text-gray-300 px-3 py-2 rounded-md text-sm font-medium min-h-[44px] flex items-center" %>
        </div>
      </div>
      
      <div class="flex items-center space-x-2 md:space-x-4">
        <% if current_user.accounts.any? %>
          <div class="relative hidden md:block">
            <button data-dropdown-toggle="account-dropdown"
                    class="text-sm text-gray-300 hover:text-white px-3 py-2 rounded transition-colors min-h-[44px] flex items-center">
              Accounts
              <svg class="w-4 h-4 inline-block ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div id="account-dropdown" 
                 class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44">
              <ul class="py-2 text-sm text-gray-700">
                <% current_user.accounts.order(:account_type).each do |account| %>
                  <li>
                    <%= link_to account.display_name_or_type,
                        account_path(account),
                        class: "block px-4 py-2 hover:bg-gray-100 min-h-[44px] flex items-center" %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
        <span class="text-sm text-gray-300 hidden lg:inline"><%= current_user.email %></span>
        <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "px-4 py-2 bg-gray-700 hover:bg-gray-600 rounded transition-colors min-h-[44px] flex items-center text-sm" %>
        
        <!-- Mobile menu button -->
        <button data-collapse-toggle="mobile-menu"
                class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-300 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white min-w-[44px] min-h-[44px]"
                aria-controls="mobile-menu"
                aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div class="hidden md:hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 border-t border-gray-700">
        <%= link_to "Dashboard", root_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-gray-700 min-h-[44px] flex items-center" %>
        <%= link_to "Accounts", accounts_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-gray-700 min-h-[44px] flex items-center" %>
        <%= link_to "Transactions", transactions_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-gray-700 min-h-[44px] flex items-center" %>
        <%= link_to "Budgets", budgets_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-gray-700 min-h-[44px] flex items-center" %>
        <%= link_to "Investment Goals", investment_goals_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-gray-700 min-h-[44px] flex items-center" %>
        <%= link_to "Settings", settings_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-gray-700 min-h-[44px] flex items-center" %>
        <% if current_user.accounts.any? %>
          <div class="px-3 py-2">
            <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Quick Accounts</p>
            <% current_user.accounts.order(:account_type).limit(3).each do |account| %>
              <%= link_to account.display_name_or_type,
                  account_path(account),
                  class: "block px-3 py-2 rounded-md text-sm text-gray-300 hover:text-white hover:bg-gray-700 min-h-[44px] flex items-center" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>

