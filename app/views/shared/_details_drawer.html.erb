<!-- Generic Details Drawer (used by Calendar on mobile) -->
<div id="detailsDrawer"
     class="hidden z-50"
     data-calendar-target="detailsModal">

  <!-- Drawer Panel -->
  <div class="fixed inset-y-0 right-0 w-full sm:w-96 bg-white dark:bg-primary-700 shadow-deep flex flex-col transform translate-x-full transition-transform duration-500 ease-in-out border-l-2 border-gray-300 dark:border-gray-700 md:top-16 md:bottom-0"
       id="detailsDrawerPanel">

    <!-- Drawer Header -->
    <div class="bg-gradient-to-r from-primary-600 via-primary-700 to-primary-600 dark:from-primary-700 dark:via-primary-900 dark:to-primary-700 px-6 py-5 flex-shrink-0">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="inline-flex items-center justify-center w-10 h-10 bg-white/20 rounded-lg">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-bold text-white">Day Details</h3>
            <p class="text-white/80 text-sm mt-0.5">Transactions for the selected day</p>
          </div>
        </div>
        <button type="button" id="detailsDrawerClose" class="text-white/70 hover:text-white hover:bg-white/10 rounded-lg p-2 transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Drawer Content (Scrollable) -->
    <div class="flex-1 overflow-y-auto p-0" id="detailsDrawerContent">
      <!-- Injected content goes here -->
    </div>
  </div>
</div>





