<%
  # Chart Card - Placeholder for future charts
  title = local_assigns.fetch(:title, 'Chart')
  subtitle = local_assigns.fetch(:subtitle, nil)
  chart_type = local_assigns.fetch(:chart_type, 'line')
  description = local_assigns.fetch(:description, 'Chart coming soon')
  icon_color = local_assigns.fetch(:icon_color, 'primary')
  size = local_assigns.fetch(:size, 'bento-span-2 bento-row-span-2')
  
  # Icon color schemes
  case icon_color
  when 'success'
    icon_bg = 'bg-success-500/10 dark:bg-success-700/20'
    icon_text = 'text-success-500 dark:text-success-300'
    border_color = 'border-success-500/20 dark:border-success-700/30'
  when 'income'
    icon_bg = 'bg-income-500/10 dark:bg-income-500/20'
    icon_text = 'text-income-700 dark:text-income-400'
    border_color = 'border-income-500/20 dark:border-income-500/30'
  else # primary
    icon_bg = 'bg-primary-700/10 dark:bg-primary-500/20'
    icon_text = 'text-primary-700 dark:text-primary-500'
    border_color = 'border-primary-700/20 dark:border-primary-900/30'
  end
  
  # Chart type icons
  case chart_type
  when 'pie'
    icon_svg = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" />'
    chart_name = 'Pie Chart'
  when 'bar'
    icon_svg = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />'
    chart_name = 'Bar Chart'
  else # line
    icon_svg = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />'
    chart_name = 'Line Chart'
  end
%>

<div class="<%= size %> bg-gradient-to-br from-neutral-100 to-white dark:from-primary-700 dark:to-primary-900 rounded-2xl shadow-lg p-6 border-2 <%= border_color %>">
  <!-- Header -->
  <div class="flex items-center justify-between mb-4">
    <div>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white"><%= title %></h3>
      <% if subtitle.present? %>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1"><%= subtitle %></p>
      <% end %>
    </div>
    <div class="inline-flex items-center justify-center w-10 h-10 <%= icon_bg %> rounded-lg">
      <svg class="w-6 h-6 <%= icon_text %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <%= icon_svg.html_safe %>
      </svg>
    </div>
  </div>
  
  <!-- Chart Placeholder -->
  <div class="h-full flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 dark:from-primary-950 dark:to-primary-900 rounded-xl border-2 border-dashed border-gray-300 dark:border-gray-600">
    <div class="text-center p-8">
      <svg class="w-20 h-20 mx-auto text-gray-400 dark:text-gray-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <%= icon_svg.html_safe %>
      </svg>
      <p class="text-gray-600 dark:text-gray-400 font-medium text-lg"><%= chart_name %> Coming Soon</p>
      <p class="text-sm text-gray-500 dark:text-gray-500 mt-2"><%= description %></p>
    </div>
  </div>
</div>
