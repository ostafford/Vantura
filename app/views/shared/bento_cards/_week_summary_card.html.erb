<%# Week Summary Bar for Calendar Month View - Option A (full-width, single line)
    Locals: week_index, eow_amount, week_start_date, week_end_date %>
<% eow_amount = local_assigns[:eow_amount] || 0 %>
<% week_start = local_assigns[:week_start_date] %>
<% week_end = local_assigns[:week_end_date] %>
<% is_negative = eow_amount < 0 %>

<div class="w-full rounded-md border <%= is_negative ? 'border-red-200 dark:border-red-900/40' : 'border-green-200 dark:border-green-900/40' %> 
            <%= is_negative ? 'bg-red-50/60 dark:bg-red-900/10' : 'bg-green-50/60 dark:bg-green-900/10' %> px-3 py-1.5">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-3 text-sm">
      <span class="font-semibold text-gray-600 dark:text-gray-400">Week end</span>
      <span class="text-gray-500 dark:text-gray-500"><%= week_start.strftime('%b %d') %> - <%= week_end.strftime('%b %d') %></span>
    </div>
    <div class="text-2xl font-bold <%= is_negative ? 'text-red-700 dark:text-red-200' : 'text-green-700 dark:text-green-200' %>">
      <%= is_negative ? '-' : '' %>$<%= number_with_precision(eow_amount.abs, precision: 2) %>
    </div>
  </div>
</div>
