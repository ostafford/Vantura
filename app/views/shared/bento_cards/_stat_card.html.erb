<%
  # Stat Card - Flexible metric display card
  title = local_assigns.fetch(:title, 'Metric')
  value = local_assigns.fetch(:value, '$0.00')
  subtitle = local_assigns.fetch(:subtitle, nil)
  detail = local_assigns.fetch(:detail, nil)
  icon = local_assigns.fetch(:icon, 'chart')
  color = local_assigns.fetch(:color, 'blue')
  size = local_assigns.fetch(:size, 'bento-span-1 bento-row-span-2')
  link = local_assigns.fetch(:link, nil)
  clickable = link.present?
  element_id = local_assigns.fetch(:id, nil)
  
  # Icon paths
  icon_paths = {
    'arrow-down' => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />',
    'arrow-up' => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />',
    'chart' => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />',
    'calendar' => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />',
    'dollar' => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />',
    'refresh' => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />',
    'wallet' => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />',
    'warning' => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />'
  }
  icon_svg = icon_paths[icon] || icon_paths['chart']
  
  # Color classes based on color scheme
  case color
  when 'red', 'coral', 'expense'
    bg_gradient = 'bg-expense-100 dark:bg-expense-900/20'
    icon_bg = 'bg-expense-200 dark:bg-expense-900/30'
    icon_text = 'text-expense-500 dark:text-expense-400'
    value_text = 'text-expense-500 dark:text-expense-400'
  when 'green', 'gold', 'income'
    bg_gradient = 'bg-income-200 dark:bg-income-900/20'
    icon_bg = 'bg-income-400 dark:bg-income-900/30'
    icon_text = 'text-income-700 dark:text-income-400'
    value_text = 'text-income-700 dark:text-income-400'
  else # blue
    bg_gradient = 'from-blue-50 to-white dark:from-blue-900/10 dark:to-gray-800'
    icon_bg = 'bg-blue-100 dark:bg-blue-900/30'
    icon_text = 'text-primary-700 dark:text-primary-500'
    value_text = 'text-primary-700 dark:text-primary-500'
  end
  
  # Build CSS classes
  base_classes = "#{size} #{bg_gradient} rounded-2xl shadow-deep p-6"
  interactive_classes = clickable ? "hover:shadow-deep transition-all cursor-pointer group" : ""
  card_classes = "#{base_classes} #{interactive_classes}"
%>

<% if clickable %>
  <%= link_to link, class: card_classes, id: element_id do %>
    <div class="stat-card-container flex flex-col h-full">
      <!-- Section 1: Icon, Title, and Value -->
      <div class="stat-card-main-content flex-1">
        <!-- Top Row: Icon, Title, and Value -->
        <div class="flex items-center gap-4 mb-4">
          <div class="stat-card-icon inline-flex items-center justify-center w-12 h-12 <%= icon_bg %> rounded-xl flex-shrink-0 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 <%= icon_text %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <%= icon_svg.html_safe %>
            </svg>
          </div>
          
          <div class="flex-1 min-w-0">
            <p class="stat-card-title text-sm font-medium text-gray-600 dark:text-gray-400 mb-1"><%= title %></p>
            <p class="stat-card-value font-bold <%= value_text %>"><%= value %></p>
          </div>
        </div>
        
        <!-- Custom content (e.g., top merchants) goes here in Section 1 -->
        <% if block_given? %>
          <div class="stat-card-custom-content">
            <%= yield %>
          </div>
        <% end %>
      </div>
      
      <!-- Section 2: Subtitle and Detail (footer) -->
      <% if subtitle.present? || detail.present? %>
        <div class="stat-card-footer pt-4 border-t border-gray-200 dark:border-gray-700">
          <% if subtitle.present? %>
            <p class="stat-card-subtitle text-sm text-gray-500 dark:text-gray-400"><%= subtitle %></p>
          <% end %>
          <% if detail.present? %>
            <p class="stat-card-detail text-xs text-gray-400 dark:text-gray-500 mt-1"><%= detail %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
<% else %>
  <div class="<%= card_classes %>" <%= "id=\"#{element_id}\"" if element_id.present? %>>
    <div class="stat-card-container flex flex-col h-full">
      <!-- Section 1: Icon, Title, and Value -->
      <div class="stat-card-main-content flex-1">
        <!-- Top Row: Icon, Title, and Value -->
        <div class="flex items-center gap-4 mb-4">
          <div class="stat-card-icon inline-flex items-center justify-center w-12 h-12 <%= icon_bg %> rounded-xl flex-shrink-0">
            <svg class="w-6 h-6 <%= icon_text %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <%= icon_svg.html_safe %>
            </svg>
          </div>
          
          <div class="flex-1 min-w-0">
            <p class="stat-card-title text-sm font-medium text-gray-600 dark:text-gray-400 mb-1"><%= title %></p>
            <p class="stat-card-value font-bold <%= value_text %>"><%= value %></p>
          </div>
        </div>
        
        <!-- Custom content (e.g., top merchants) goes here in Section 1 -->
        <% if block_given? %>
          <div class="stat-card-custom-content">
            <%= yield %>
          </div>
        <% end %>
      </div>
      
      <!-- Section 2: Subtitle and Detail (footer) -->
      <% if subtitle.present? || detail.present? %>
        <div class="stat-card-footer pt-4 border-t border-gray-200 dark:border-gray-700">
          <% if subtitle.present? %>
            <p class="stat-card-subtitle text-sm text-gray-500 dark:text-gray-400"><%= subtitle %></p>
          <% end %>
          <% if detail.present? %>
            <p class="stat-card-detail text-xs text-gray-400 dark:text-gray-500 mt-1"><%= detail %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
