<!-- Sync Complete Notification (appears after sync via WebSocket) -->
<div class="fixed top-4 right-4 bg-white dark:bg-gray-800 rounded-lg shadow-xl border-2 border-green-500 dark:border-green-400 p-4 min-w-[320px] z-50 animate-slide-in"
     data-controller="notification">
  <div class="flex items-center gap-3">
    <!-- Success Icon -->
    <div class="flex-shrink-0">
      <div class="w-10 h-10 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center">
        <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
    </div>
    
    <div class="flex-1">
      <p class="text-sm font-semibold text-gray-900 dark:text-white">Sync Complete!</p>
      <p class="text-xs text-gray-600 dark:text-gray-400 mt-1">
        <%= new_transactions > 0 ? "#{new_transactions} new transaction#{'s' if new_transactions != 1} added" : "Everything is up to date" %>
      </p>
    </div>
    
    <!-- Dismiss Button -->
    <button type="button" 
            data-action="click->notification#dismiss"
            class="flex-shrink-0 text-gray-400 hover:text-gray-600 dark:hover:text-gray-200">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>
</div>

