<!-- Recurring Transaction Modal -->
<% if @account %>
  <div id="recurringModal" data-recurring-modal-target="modal" data-action="click->recurring-modal#closeOnBackground" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 dark:bg-black/70 z-50 items-center justify-center p-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full">
      <div class="bg-blue-600 dark:bg-blue-700 px-6 py-4 rounded-t-lg">
        <div class="flex items-center justify-between">
          <h3 class="text-xl font-bold text-white">Make Recurring</h3>
          <button type="button" data-action="click->recurring-modal#close" class="text-white hover:text-gray-200 hover:scale-110 transition-all">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <p class="text-blue-100 text-sm mt-1">Automatically project this transaction into the future</p>
      </div>

      <%= form_with url: recurring_transactions_path, method: :post, class: "p-6", id: "recurringForm", data: { recurring_modal_target: "form" } do |f| %>
        <%= f.hidden_field :transaction_id, id: "recurringTransactionId", data: { recurring_modal_target: "transactionId" } %>
        
        <div class="space-y-4">
          <!-- Transaction Preview -->
          <div class="bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg p-4">
            <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Transaction:</p>
            <p class="text-lg font-semibold text-gray-900 dark:text-white" id="recurringDescription" data-recurring-modal-target="description">-</p>
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Amount: <span id="recurringAmount" data-recurring-modal-target="amount" class="font-medium">-</span></p>
          </div>

          <!-- Frequency Selection -->
          <div>
            <label for="frequency" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">How often does this occur?</label>
            <select name="frequency" id="frequency" required 
                    data-recurring-modal-target="frequencySelect"
                    data-action="change->recurring-modal#updateNextOccurrenceDate"
                    class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              <option value="">Select frequency...</option>
              <option value="weekly">Weekly (every 7 days)</option>
              <option value="fortnightly">Fortnightly (every 14 days)</option>
              <option value="monthly">Monthly</option>
              <option value="quarterly">Quarterly (every 3 months)</option>
              <option value="yearly">Yearly</option>
            </select>
          </div>

          <!-- Next Occurrence Date -->
          <div>
            <label for="nextOccurrenceDate" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
              When is the next occurrence?
            </label>
            <%= f.date_field :next_occurrence_date, 
                id: "nextOccurrenceDate",
                data: { recurring_modal_target: "nextOccurrenceDate" },
                class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                required: true %>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">We'll project future occurrences from this date</p>
          </div>

          <!-- Projection Duration -->
          <div>
            <label for="projection_months" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
              How far ahead to project?
            </label>
            <select name="projection_months" id="projection_months" 
                    class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              <option value="indefinite" selected>Indefinite (recommended)</option>
              <option value="3">3 months</option>
              <option value="6">6 months</option>
              <option value="12">12 months</option>
              <option value="24">24 months</option>
            </select>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Indefinite will continue projecting as you navigate future months</p>
          </div>

          <!-- Amount Tolerance -->
          <div>
            <label for="recurring_transaction_amount_tolerance" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
              Amount matching tolerance
            </label>
            <div class="relative">
              <span class="absolute left-4 top-2 text-gray-500 dark:text-gray-400">Â±$</span>
              <%= f.number_field :amount_tolerance,
                  id: "recurring_transaction_amount_tolerance", 
                  step: 0.01,
                  value: 1.0,
                  class: "w-full pl-10 pr-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                  min: 0 %>
            </div>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Allows matching transactions with slightly different amounts</p>
          </div>

          <!-- Info Box -->
          <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-3">
            <p class="text-xs text-blue-800 dark:text-blue-200">
              <strong>How it works:</strong> We'll automatically add this transaction to future months in your calendar. 
              When Up Bank syncs the real transaction, we'll match and replace it automatically.
            </p>
          </div>
        </div>

        <div class="mt-6 flex gap-3">
          <%= f.submit "Create Recurring Pattern", 
              class: "flex-1 bg-blue-600 dark:bg-blue-700 text-white px-4 py-3 rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 hover:shadow-lg hover:scale-105 transition-all font-semibold" %>
          <button type="button" data-action="click->recurring-modal#close" 
                  class="px-4 py-3 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 hover:shadow-lg hover:scale-105 transition-all font-semibold">
            Cancel
          </button>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

