<!-- Quick Actions Partial -->
<!-- This partial displays quick action buttons for common tasks -->
<!-- Params: show_add_transaction (default: true) - shows the Add Transaction button -->
<!-- Params: show_calendar (default: true) - shows the Calendar button -->
<!-- Params: show_recurring (default: true) - shows the Recurring Transactions button -->
<!-- Params: show_trends (default: true) - shows the Trends button -->

<% show_add = local_assigns.fetch(:show_add_transaction, true) %>
<% show_calendar = local_assigns.fetch(:show_calendar, true) %>
<% show_recurring = local_assigns.fetch(:show_recurring, true) %>
<% show_trends = local_assigns.fetch(:show_trends, true) %>

<div class="flex gap-2">
  <% if show_calendar %>
    <%= link_to calendar_path, class: "inline-flex items-center justify-center w-12 h-12 bg-white dark:bg-gray-800 rounded-xl text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 shadow-lg hover:shadow-xl transition-all", title: "View Calendar" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
    <% end %>
  <% end %>
  
  <% if show_recurring %>
    <%= link_to recurring_transactions_path, class: "inline-flex items-center justify-center w-12 h-12 bg-white dark:bg-gray-800 rounded-xl text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 shadow-lg hover:shadow-xl transition-all", title: "Recurring Transactions" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    <% end %>
  <% end %>
  
  <% if show_trends %>
    <%= link_to trends_path, class: "inline-flex items-center justify-center w-12 h-12 bg-white dark:bg-gray-800 rounded-xl text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 shadow-lg hover:shadow-xl transition-all", title: "View Trends" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
      </svg>
    <% end %>
  <% end %>
  
  <% if show_add %>
    <button type="button" data-action="click->modal#open" class="inline-flex items-center justify-center w-12 h-12 bg-white dark:bg-gray-800 rounded-xl text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 hover:scale-110 shadow-lg hover:shadow-xl transition-all" title="Add Transaction">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
    </button>
  <% end %>
</div>
