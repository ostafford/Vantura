<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @budget.name %></h1>
      <p class="text-gray-600 mt-2">
        <%= @budget.period.humanize %> Budget
        <% if @budget.category %>
          for <%= @budget.category.name %>
        <% end %>
      </p>
    </div>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_budget_path(@budget), class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
      <%= link_to "Back to Budgets", budgets_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors" %>
    </div>
  </div>

  <!-- Budget Summary Card -->
  <div class="bg-white rounded-lg shadow-md p-6"
       data-controller="budget-calculator"
       data-budget-calculator-limit-value="<%= @calculation[:limit] %>"
       data-budget-calculator-spent-value="<%= @calculation[:spent] %>">
    
    <div class="mb-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Current Period</h2>
        <span class="text-sm text-gray-500">
          <%= @calculation[:period_start].strftime("%b %d") %> - <%= @calculation[:period_end].strftime("%b %d, %Y") %>
        </span>
      </div>

      <!-- Progress Bar -->
      <div class="mb-6">
        <div class="flex justify-between text-sm mb-2">
          <span data-budget-calculator-target="percentage" class="font-medium text-gray-700"></span>
          <span class="text-gray-500">
            <span data-budget-calculator-target="spent"></span> / 
            <span data-budget-calculator-target="amount"></span>
          </span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-4 overflow-hidden">
          <div class="h-full rounded-full transition-all duration-300"
               data-budget-calculator-target="progressBar"></div>
        </div>
      </div>

      <!-- Stats Grid -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-sm text-gray-500">Budget Limit</p>
          <p class="text-2xl font-bold text-gray-900 mt-1" data-budget-calculator-target="amount"></p>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-sm text-gray-500">Spent</p>
          <p class="text-2xl font-bold text-red-600 mt-1" data-budget-calculator-target="spent"></p>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-sm text-gray-500">Remaining</p>
          <p class="text-2xl font-bold text-gray-900 mt-1" data-budget-calculator-target="remaining"></p>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-sm text-gray-500">Transactions</p>
          <p class="text-2xl font-bold text-gray-900 mt-1"><%= @calculation[:transactions_count] %></p>
        </div>
      </div>
    </div>

    <% if @calculation[:alert_triggered] %>
      <div class="mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded-md">
        <p class="text-sm text-yellow-800">
          ⚠️ Budget threshold reached (<%= @budget.alert_threshold %>%)
        </p>
      </div>
    <% end %>
  </div>

  <!-- Budget Details -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Budget Details</h2>
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <dt class="text-sm font-medium text-gray-500">Name</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @budget.name %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Category</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <% if @budget.category %>
            <span class="inline-block bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs">
              <%= @budget.category.name %>
            </span>
          <% else %>
            <span class="text-gray-400">No category</span>
          <% end %>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Period</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @budget.period.humanize %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Alert Threshold</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @budget.alert_threshold %>%</dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Status</dt>
        <dd class="mt-1">
          <% if @budget.active? %>
            <span class="inline-block bg-green-100 text-green-800 px-2 py-1 rounded text-xs">Active</span>
          <% else %>
            <span class="inline-block bg-gray-100 text-gray-800 px-2 py-1 rounded text-xs">Inactive</span>
          <% end %>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Created</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @budget.created_at.strftime("%B %d, %Y") %></dd>
      </div>
    </dl>
  </div>
</div>

