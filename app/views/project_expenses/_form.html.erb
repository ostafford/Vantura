<%= form_with(model: [@project, @expense], local: true) do |f| %>
  <% if @expense.errors.any? %>
    <div class="mb-4 text-red-600">
      <ul>
        <% @expense.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= f.label :merchant, class: "block text-sm font-medium mb-1" %>
      <%= f.text_field :merchant, class: "w-full border rounded px-3 py-2" %>
    </div>
    <div>
      <%= f.label :category, class: "block text-sm font-medium mb-1" %>
      <%= f.text_field :category, class: "w-full border rounded px-3 py-2" %>
    </div>
    <div>
      <%= f.label :total_cents, "Total (in cents)", class: "block text-sm font-medium mb-1" %>
      <%= f.number_field :total_cents, min: 0, step: 1, class: "w-full border rounded px-3 py-2" %>
    </div>
    <div>
      <%= f.label :due_on, class: "block text-sm font-medium mb-1" %>
      <%= f.date_field :due_on, class: "w-full border rounded px-3 py-2" %>
    </div>
  </div>

  <div class="mt-4">
    <%= f.label :notes, class: "block text-sm font-medium mb-1" %>
    <%= f.text_area :notes, rows: 3, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="flex gap-2 mt-4">
    <%= f.submit class: "px-4 py-2 bg-primary-600 text-white rounded" %>
    <%= link_to "Cancel", project_path(@project), class: "px-4 py-2 border rounded" %>
  </div>
<% end %>


