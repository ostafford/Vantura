<div class="space-y-6">
  <div>
    <%= link_to "← Back to Accounts", accounts_path, class: "text-blue-600 hover:text-blue-800 mb-4 inline-block" %>
    <h1 class="text-3xl font-bold text-gray-900"><%= @account.display_name_or_type %></h1>
    <p class="text-gray-600 mt-2"><%= @account.account_type %> • <%= @account.ownership_type %></p>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div>
        <p class="text-sm text-gray-500">Balance</p>
        <p class="text-3xl font-bold text-gray-900 mt-2">
          <%= number_to_currency(@account.balance, unit: "$") %>
        </p>
      </div>
      <div>
        <p class="text-sm text-gray-500">Currency</p>
        <p class="text-xl font-semibold text-gray-700 mt-2"><%= @account.currency_code %></p>
      </div>
      <div>
        <p class="text-sm text-gray-500">Account ID</p>
        <p class="text-sm font-mono text-gray-600 mt-2"><%= @account.up_id %></p>
      </div>
    </div>
  </div>

  <div>
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Transactions</h2>
    <%= link_to "View All Transactions", transactions_path(account_id: @account.id), class: "inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>
</div>

