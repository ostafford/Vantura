<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @investment_goal.name %></h1>
      <p class="text-gray-600 mt-2">
        <% if @investment_goal.account %>
          Linked to <%= @investment_goal.account.display_name_or_type %>
        <% else %>
          No linked account
        <% end %>
      </p>
    </div>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_investment_goal_path(@investment_goal), class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
      <%= link_to "Back to Goals", investment_goals_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors" %>
    </div>
  </div>

  <% if @progress %>
    <!-- Progress Summary Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="mb-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-semibold text-gray-900">Goal Progress</h2>
          <% if @investment_goal.target_date %>
            <span class="text-sm text-gray-500">
              Target Date: <%= @investment_goal.target_date.strftime("%B %d, %Y") %>
            </span>
          <% end %>
        </div>

        <!-- Progress Bar -->
        <div class="mb-6">
          <div class="flex justify-between text-sm mb-2">
            <span class="font-medium text-gray-700"><%= number_to_percentage(@progress[:progress], precision: 1) %></span>
            <span class="text-gray-500">
              <%= number_to_currency(@progress[:current], unit: "$") %> / <%= number_to_currency(@progress[:target], unit: "$") %>
            </span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-4 overflow-hidden">
            <div class="h-full rounded-full transition-all duration-300 bg-blue-500" 
                 data-controller="progress-bar"
                 data-progress-bar-width-value="<%= [[@progress[:progress], 100].min, 0].max %>"></div>
          </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="bg-gray-50 p-4 rounded-lg">
            <p class="text-sm text-gray-500">Target Amount</p>
            <p class="text-2xl font-bold text-gray-900 mt-1"><%= number_to_currency(@progress[:target], unit: "$") %></p>
          </div>
          <div class="bg-gray-50 p-4 rounded-lg">
            <p class="text-sm text-gray-500">Current Amount</p>
            <p class="text-2xl font-bold text-green-600 mt-1"><%= number_to_currency(@progress[:current], unit: "$") %></p>
          </div>
          <div class="bg-gray-50 p-4 rounded-lg">
            <p class="text-sm text-gray-500">Remaining</p>
            <p class="text-2xl font-bold text-gray-900 mt-1"><%= number_to_currency(@progress[:remaining], unit: "$") %></p>
          </div>
          <div class="bg-gray-50 p-4 rounded-lg">
            <p class="text-sm text-gray-500">Progress</p>
            <p class="text-2xl font-bold text-gray-900 mt-1"><%= number_to_percentage(@progress[:progress], precision: 1) %></p>
          </div>
        </div>
      </div>

      <% if @progress[:on_track] %>
        <div class="mt-6 p-4 bg-green-50 border border-green-200 rounded-md">
          <p class="text-sm text-green-800">
            ✓ You're on track to reach your goal!
          </p>
        </div>
      <% elsif @investment_goal.target_date %>
        <div class="mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded-md">
          <p class="text-sm text-yellow-800">
            ⚠️ You may need to increase savings to reach your target date
          </p>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @growth_data && @chart_data %>
    <!-- Growth Chart -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Savings Growth Over Time</h2>
      <div class="mt-4">
        <canvas data-controller="chart"
                data-chart-type-value="line"
                data-chart-data-value="<%= @chart_data.to_json %>"
                data-chart-options-value="<%= @chart_options.to_json %>">
        </canvas>
      </div>
      <div class="mt-4 grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
        <div>
          <span class="text-gray-500">Start Balance:</span>
          <span class="font-semibold text-gray-900 ml-2"><%= number_to_currency(@growth_data[:start_balance], unit: "$") %></span>
        </div>
        <div>
          <span class="text-gray-500">Current Balance:</span>
          <span class="font-semibold text-gray-900 ml-2"><%= number_to_currency(@growth_data[:end_balance], unit: "$") %></span>
        </div>
        <div>
          <span class="text-gray-500">Growth:</span>
          <span class="font-semibold <%= @growth_data[:growth] >= 0 ? 'text-green-600' : 'text-red-600' %> ml-2">
            <%= number_to_currency(@growth_data[:growth], unit: "$") %>
          </span>
        </div>
        <div>
          <span class="text-gray-500">Growth %:</span>
          <span class="font-semibold <%= @growth_data[:growth_percentage] >= 0 ? 'text-green-600' : 'text-red-600' %> ml-2">
            <%= number_to_percentage(@growth_data[:growth_percentage], precision: 2) %>
          </span>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Goal Details -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Goal Details</h2>
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <dt class="text-sm font-medium text-gray-500">Name</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @investment_goal.name %></dd>
      </div>
      <% if @investment_goal.description.present? %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @investment_goal.description %></dd>
        </div>
      <% end %>
      <div>
        <dt class="text-sm font-medium text-gray-500">Target Amount</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= number_to_currency(@investment_goal.target_amount, unit: "$") %></dd>
      </div>
      <% if @investment_goal.account %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Linked Account</dt>
          <dd class="mt-1">
            <%= link_to @investment_goal.account.display_name_or_type, 
                account_path(@investment_goal.account), 
                class: "text-blue-600 hover:text-blue-800" %>
          </dd>
        </div>
      <% end %>
      <% if @investment_goal.target_date %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Target Date</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @investment_goal.target_date.strftime("%B %d, %Y") %></dd>
        </div>
      <% end %>
      <div>
        <dt class="text-sm font-medium text-gray-500">Status</dt>
        <dd class="mt-1">
          <% if @investment_goal.active? %>
            <span class="inline-block bg-green-100 text-green-800 px-2 py-1 rounded text-xs">Active</span>
          <% else %>
            <span class="inline-block bg-gray-100 text-gray-800 px-2 py-1 rounded text-xs">Inactive</span>
          <% end %>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Created</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @investment_goal.created_at.strftime("%B %d, %Y") %></dd>
      </div>
    </dl>
  </div>
</div>

