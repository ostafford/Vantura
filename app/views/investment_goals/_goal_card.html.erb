<%
  tracker = InvestmentTracker.new(current_user)
  progress = tracker.calculate_goal_progress(goal) if goal.account_id
  progress_percentage = progress ? progress[:progress] : 0
  current_amount = progress ? progress[:current] : (goal.current_amount || 0)
  target_amount = goal.target_amount
%>

<div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
  <div class="flex justify-between items-start mb-4">
    <div>
      <h3 class="text-lg font-semibold text-gray-900">
        <%= goal.name %>
      </h3>
      <% if goal.account %>
        <span class="inline-block mt-1 bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">
          <%= goal.account.display_name_or_type %>
        </span>
      <% end %>
      <% if goal.description.present? %>
        <p class="text-sm text-gray-500 mt-1"><%= truncate(goal.description, length: 60) %></p>
      <% end %>
    </div>
    <div class="text-right">
      <% if goal.active? %>
        <span class="inline-block bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Active</span>
      <% else %>
        <span class="inline-block bg-gray-100 text-gray-800 text-xs px-2 py-1 rounded">Inactive</span>
      <% end %>
    </div>
  </div>

  <!-- Progress Bar -->
  <div class="mb-4">
    <div class="flex justify-between text-sm mb-2">
      <span class="font-medium text-gray-700"><%= number_to_percentage(progress_percentage, precision: 1) %></span>
      <span class="text-gray-500">
        <%= number_to_currency(current_amount, unit: "$") %> / <%= number_to_currency(target_amount, unit: "$") %>
      </span>
    </div>
    <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
      <div class="h-full rounded-full transition-all duration-300 bg-blue-500" 
           data-controller="progress-bar"
           data-progress-bar-width-value="<%= [progress_percentage, 100].min %>"></div>
    </div>
  </div>

  <!-- Goal Stats -->
  <div class="grid grid-cols-2 gap-4 text-sm mb-4">
    <div>
      <span class="text-gray-500">Target:</span>
      <span class="font-semibold text-gray-900 ml-2"><%= number_to_currency(target_amount, unit: "$") %></span>
    </div>
    <div>
      <span class="text-gray-500">Remaining:</span>
      <span class="font-semibold text-gray-900 ml-2">
        <%= number_to_currency([target_amount - current_amount, 0].max, unit: "$") %>
      </span>
    </div>
  </div>

  <% if progress && progress[:on_track] %>
    <div class="mb-4 p-3 bg-green-50 border border-green-200 rounded-md">
      <p class="text-sm text-green-800">
        âœ“ On track to reach goal
      </p>
    </div>
  <% end %>

  <!-- Actions -->
  <div class="mt-4 flex space-x-2">
    <%= link_to "View", investment_goal_path(goal), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
    <%= link_to "Edit", edit_investment_goal_path(goal), class: "text-gray-600 hover:text-gray-800 text-sm font-medium" %>
    <%= button_to goal.active? ? "Deactivate" : "Activate", 
        toggle_active_investment_goal_path(goal), 
        method: :post,
        class: "text-gray-600 hover:text-gray-800 text-sm font-medium",
        form: { class: "inline" } %>
  </div>
</div>

