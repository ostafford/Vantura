<div class="min-h-screen bg-neutral-light dark:bg-secondary-dark" data-modal-type-value="transaction">
  <!-- Header -->
  <div class="bg-gradient-to-r from-neutral-light to-white dark:from-secondary-dark dark:to-gray-800 shadow-sm border-b border-primary/20 dark:border-primary-dark/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Vantura Calendar</h1>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            <%= link_to "← Back to Dashboard", root_path, class: "text-primary dark:text-primary-light hover:text-primary-dark dark:hover:text-primary font-medium" %>
          </p>
        </div>

        <div class="flex items-center gap-4 flex-wrap">
          <% if @account %>
            <div class="flex gap-6">
              <div class="text-right">
                <p class="text-sm text-gray-600 dark:text-gray-400">Current Balance</p>
                <p class="text-2xl font-bold text-primary dark:text-primary-light">
                  $<%= number_with_precision(@account.current_balance, precision: 2) %>
                </p>
              </div>
              <div class="text-right border-l border-gray-200 dark:border-gray-700 pl-6">
                <p class="text-sm text-gray-600 dark:text-gray-400">EOM Projection</p>
                <p class="text-2xl font-bold <%= @end_of_month_balance >= @account.current_balance ? 'text-green-600 dark:text-green-400' : 'text-orange-600 dark:text-orange-400' %>">
                  $<%= number_with_precision(@end_of_month_balance, precision: 2) %>
                </p>
              </div>
            </div>
          <% end %>

          <%= render 'shared/settings_button', hide_text: true %>
        </div>
      </div>
    </div>
  </div>

  <% if @account %>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

      <!-- Month Navigation -->
      <%= render 'shared/month_navigation', 
          prev_path: calendar_month_path(@date.prev_month.year, @date.prev_month.month),
          next_path: calendar_month_path(@date.next_month.year, @date.next_month.month) do %>
        <button type="button" data-action="click->modal#open" class="inline-flex items-center px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors font-medium">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Add Transaction
        </button>
      <% end %>

      <!-- Calendar Grid -->
      <div class="bg-gradient-to-br from-neutral-light to-white dark:from-gray-800 dark:to-secondary-dark rounded-lg shadow-sm border-2 border-secondary/20 dark:border-secondary-dark overflow-hidden chevron-fix">
        <table class="w-full">
          <thead>
            <tr class="bg-gray-100 dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700">
              <th class="px-4 py-3 text-center font-semibold text-gray-700 dark:text-gray-300 w-32">Monday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 dark:text-gray-300 w-32">Tuesday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 dark:text-gray-300 w-32">Wednesday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 dark:text-gray-300 w-32">Thursday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 dark:text-gray-300 w-32">Friday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 dark:text-gray-300 w-32">Saturday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 dark:text-gray-300 w-32">Sunday</th>
              <th class="px-4 py-3 text-center font-bold text-gray-700 dark:text-gray-300 bg-gray-200 dark:bg-gray-700 w-32">EOW Amount</th>
            </tr>
          </thead>
          <tbody>
            <% @weeks.each_with_index do |week, week_idx| %>
              <tr class="border-b border-gray-200 dark:border-gray-700">
                <% week.each do |day| %>
                  <% total = day_total(day[:date]) %>
                  <% transactions = day_transactions(day[:date]) %>
                  <% day_id = "day-#{day[:date].to_s}" %>
                  <% has_trans = transactions.any? %>
                  <%
                    cell_class = if !day[:in_current_month]
                      "bg-gray-50 dark:bg-gray-900"
                    elsif total > 0
                      "bg-green-50 dark:bg-green-900/20"
                    elsif total < 0
                      "bg-red-50 dark:bg-red-900/20"
                    else
                      "bg-white dark:bg-gray-800"
                    end
                  %>

                  <td class="<%= cell_class %> px-4 py-6 text-center border-r border-gray-200 dark:border-gray-700 <%= has_trans ? 'hover:bg-blue-50 dark:hover:bg-blue-900/20 cursor-pointer' : '' %> transition-all"
                      <%= "data-day-id=\"#{day_id}\" data-action=\"click->calendar#toggleDay\"" if has_trans %>>
                    <% if day[:in_current_month] %>
                      <div class="text-xs text-gray-500 dark:text-gray-400 mb-1"><%= day[:date].day %></div>
                      <div class="text-lg font-semibold <%= total < 0 ? 'text-red-600 dark:text-red-400' : 'text-green-600 dark:text-green-400' %>">
                        <% if total != 0 %>
                          <%= total < 0 ? "-" : "+" %>$<%= number_with_precision(total.abs, precision: 2) %>
                        <% else %>
                          $0.00
                        <% end %>
                      </div>
                      <% if transactions.any? %>
                        <div class="text-xs text-gray-400 dark:text-gray-500 mt-1">
                          <%= transactions.count %> <%= transactions.count == 1 ? 'item' : 'items' %>
                        </div>
                        <div class="text-xs text-blue-500 dark:text-blue-400 mt-1">Click for details</div>
                      <% end %>
                    <% end %>
                  </td>
                <% end %>

                <!-- EOW Amount -->
                <% eow_balance = @eow_amounts[week_idx] %>
                <td class="px-4 py-6 text-center font-bold text-lg <%= eow_balance < 0 ? 'bg-red-100 dark:bg-red-900/20 text-red-700 dark:text-red-400' : 'bg-green-100 dark:bg-green-900/20 text-green-700 dark:text-green-400' %> border-r border-gray-200 dark:border-gray-700">
                  <%= eow_balance < 0 ? '-' : '' %>$<%= number_with_precision(eow_balance.abs, precision: 2) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Transaction Details Sections -->
      <% @weeks.each do |week| %>
        <% week.each do |day| %>
          <% transactions = day_transactions(day[:date]) %>
          <% if transactions.any? && day[:in_current_month] %>
            <% day_id = "day-#{day[:date].to_s}" %>
            <div id="<%= day_id %>" class="hidden mt-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
              <div class="bg-blue-50 dark:bg-blue-900/20 px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                    <%= day[:date].strftime("%A, %B %d, %Y") %>
                  </h3>
                  <button type="button" data-day-id="<%= day_id %>" data-action="click->calendar#toggleDay" class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                  </button>
                </div>
              </div>
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                  <thead class="bg-gray-50 dark:bg-gray-900">
                    <tr>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Description</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Category</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                      <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
                      <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                    <% transactions.each do |transaction| %>
                      <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 <%= transaction.is_hypothetical ? 'bg-purple-50 dark:bg-purple-900/20' : '' %>">
                        <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-300">
                          <%= transaction.description %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                          <%= transaction.category&.humanize || "Uncategorized" %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <div class="flex gap-1">
                            <%= transaction_status_badge(transaction) %>
                            <%= transaction_recurring_badge(transaction) %>
                          </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-semibold">
                          <%= formatted_transaction_amount(transaction) %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right">
                          <div class="flex gap-2 justify-end">
                            <%= transaction_action_buttons(transaction) %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                  <tfoot class="bg-gray-50">
                    <tr>
                      <td colspan="4" class="px-6 py-4 text-sm font-semibold text-gray-900 text-right">Day Total:</td>
                      <td class="px-6 py-4 text-sm font-bold text-right <%= day_total(day[:date]) < 0 ? 'text-red-600' : 'text-green-600' %>">
                        <%= day_total(day[:date]) < 0 ? "-" : "+" %>$<%= number_with_precision(day_total(day[:date]).abs, precision: 2) %>
                      </td>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>

      <!-- Legend -->
      <div class="mt-6 bg-gradient-to-r from-neutral-light to-white dark:from-gray-800 dark:to-secondary-dark rounded-lg shadow-sm border-2 border-primary/20 dark:border-primary-dark/30 p-6">
        <h3 class="font-semibold text-gray-700 dark:text-gray-300 mb-3">How to read the calendar:</h3>
        <div class="grid grid-cols-3 gap-4 text-sm">
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-green-50 border border-green-200 rounded"></div>
            <span class="text-gray-600 dark:text-gray-400">Green = Income or $0</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-red-50 border border-red-200 rounded"></div>
            <span class="text-gray-600 dark:text-gray-400">Red = Expenses (money out)</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-green-100 border border-green-200 rounded"></div>
            <span class="text-gray-600 dark:text-gray-400">EOW Green = Positive balance</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-red-100 border border-red-200 rounded"></div>
            <span class="text-gray-600 dark:text-gray-400">EOW Red = Negative balance</span>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- No Account Message -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="bg-gradient-to-br from-neutral-light to-white dark:from-gray-800 dark:to-secondary-dark rounded-lg shadow-sm border-2 border-primary/30 dark:border-primary-dark/30 p-12 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">No account found</h2>
        <p class="text-gray-600">Please sync your Up Bank account first.</p>
      </div>
    </div>
  <% end %>

  <%= render 'shared/transaction_modal', default_transaction_date: Date.today %>
  <%= render 'shared/recurring_modal' %>
</div>
