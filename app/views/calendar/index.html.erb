<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Vantura Calendar</h1>
          <p class="text-sm text-gray-600 mt-1">
            <%= link_to "← Back to Dashboard", root_path, class: "text-blue-600 hover:text-blue-700" %>
          </p>
        </div>

        <% if @account %>
          <div class="text-right">
            <p class="text-sm text-gray-600">Current Balance</p>
            <p class="text-2xl font-bold text-blue-600">
              $<%= number_with_precision(@account.current_balance, precision: 2) %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <% if @account %>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

      <!-- Month Navigation -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6">
        <div class="flex items-center justify-between">
          <div class="flex gap-3">
            <%= link_to calendar_month_path(@date.prev_month.year, @date.prev_month.month),
                        class: "inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              Previous
            <% end %>

            <%= link_to calendar_month_path(@date.next_month.year, @date.next_month.month),
                        class: "inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" do %>
              Next
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>

          <h2 class="text-2xl font-bold text-gray-900">
            <%= @date.strftime("%B %Y") %>
          </h2>

          <button onclick="openTransactionModal()" class="inline-flex items-center px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Transaction
          </button>
        </div>
      </div>

      <!-- Calendar Grid -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden chevron-fix">
        <table class="w-full">
          <thead>
            <tr class="bg-gray-100 border-b border-gray-200">
              <th class="px-4 py-3 text-center font-semibold text-gray-700 w-32">Monday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 w-32">Tuesday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 w-32">Wednesday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 w-32">Thursday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 w-32">Friday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 w-32">Saturday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 w-32">Sunday</th>
              <th class="px-4 py-3 text-center font-bold text-gray-700 bg-gray-200 w-32">EOW Amount</th>
            </tr>
          </thead>
          <tbody>
            <% @weeks.each_with_index do |week, week_idx| %>
              <tr class="border-b border-gray-200">
                <% week.each do |day| %>
                  <% total = day_total(day[:date]) %>
                  <% transactions = day_transactions(day[:date]) %>
                  <% day_id = "day-#{day[:date].to_s}" %>
                  <% has_trans = transactions.any? %>
                  <%
                    cell_class = if !day[:in_current_month]
                      "bg-gray-50"
                    elsif total > 0
                      "bg-green-50"
                    elsif total < 0
                      "bg-red-50"
                    else
                      "bg-white"
                    end
                  %>

                  <td class="<%= cell_class %> px-4 py-6 text-center border-r border-gray-200 hover:ring-2 hover:ring-blue-300 transition-all <%= has_trans ? 'cursor-pointer' : '' %>"
                      <%= raw("onclick=\"toggleDay('#{day_id}')\"") if has_trans %>>
                    <% if day[:in_current_month] %>
                      <div class="text-xs text-gray-500 mb-1"><%= day[:date].day %></div>
                      <div class="text-lg font-semibold <%= total < 0 ? 'text-red-600' : 'text-green-600' %>">
                        <% if total != 0 %>
                          <%= total < 0 ? "-" : "+" %>$<%= number_with_precision(total.abs, precision: 2) %>
                        <% else %>
                          $0.00
                        <% end %>
                      </div>
                      <% if transactions.any? %>
                        <div class="text-xs text-gray-400 mt-1">
                          <%= transactions.count %> <%= transactions.count == 1 ? 'item' : 'items' %>
                        </div>
                        <div class="text-xs text-blue-500 mt-1">Click for details</div>
                      <% end %>
                    <% end %>
                  </td>
                <% end %>

                <!-- EOW Amount -->
                <td class="px-4 py-6 text-center font-bold text-lg bg-green-100 text-green-700 border-r border-gray-200">
                  $<%= number_with_precision(@eow_amounts[week_idx], precision: 2) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Transaction Details Sections -->
      <% @weeks.each do |week| %>
        <% week.each do |day| %>
          <% transactions = day_transactions(day[:date]) %>
          <% if transactions.any? && day[:in_current_month] %>
            <% day_id = "day-#{day[:date].to_s}" %>
            <div id="<%= day_id %>" class="hidden mt-6 bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
              <div class="bg-blue-50 px-6 py-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                  <h3 class="text-xl font-bold text-gray-900">
                    <%= day[:date].strftime("%A, %B %d, %Y") %>
                  </h3>
                  <button onclick="toggleDay('<%= day_id %>')" class="text-gray-500 hover:text-gray-700">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                  </button>
                </div>
              </div>
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                      <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                      <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <% transactions.each do |transaction| %>
                      <tr class="hover:bg-gray-50 <%= transaction.is_hypothetical ? 'bg-purple-50' : '' %>">
                        <td class="px-6 py-4 text-sm text-gray-900">
                          <%= transaction.description %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                          <%= transaction.category&.humanize || "Uncategorized" %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <% if transaction.is_hypothetical %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                              Hypothetical
                            </span>
                          <% elsif transaction.status == "HELD" %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                              Pending
                            </span>
                          <% else %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                              Settled
                            </span>
                          <% end %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium <%= transaction.amount < 0 ? 'text-red-600' : 'text-green-600' %>">
                          <%= transaction.amount < 0 ? "-" : "+" %>$<%= number_with_precision(transaction.amount.abs, precision: 2) %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right">
                          <% if transaction.is_hypothetical %>
                            <%= button_to transaction_path(transaction), method: :delete, 
                                data: { confirm: "Remove this hypothetical transaction?" },
                                class: "inline-flex items-center px-3 py-1 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors text-xs font-medium" do %>
                              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                              </svg>
                              Remove
                            <% end %>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                  <tfoot class="bg-gray-50">
                    <tr>
                      <td colspan="4" class="px-6 py-4 text-sm font-semibold text-gray-900 text-right">Day Total:</td>
                      <td class="px-6 py-4 text-sm font-bold text-right <%= day_total(day[:date]) < 0 ? 'text-red-600' : 'text-green-600' %>">
                        <%= day_total(day[:date]) < 0 ? "-" : "+" %>$<%= number_with_precision(day_total(day[:date]).abs, precision: 2) %>
                      </td>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>

      <!-- Legend -->
      <div class="mt-6 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="font-semibold text-gray-700 mb-3">How to read the calendar:</h3>
        <div class="grid grid-cols-3 gap-4 text-sm">
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-green-50 border border-green-200 rounded"></div>
            <span class="text-gray-600">Green = Income or $0</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-red-50 border border-red-200 rounded"></div>
            <span class="text-gray-600">Red = Expenses (money out)</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-green-100 border border-green-200 rounded"></div>
            <span class="text-gray-600">EOW = End of Week Balance</span>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- No Account Message -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">No account found</h2>
        <p class="text-gray-600">Please sync your Up Bank account first.</p>
      </div>
    </div>
  <% end %>

  <!-- Transaction Modal -->
  <% if @account %>
    <div id="transactionModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 z-50 flex items-center justify-center p-4" style="display: none;">
      <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
        <div class="bg-purple-600 px-6 py-4 rounded-t-lg">
          <div class="flex items-center justify-between">
            <h3 class="text-xl font-bold text-white">Add Transaction</h3>
            <button onclick="closeTransactionModal()" class="text-white hover:text-gray-200">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <p class="text-purple-100 text-sm mt-1">Plan future expenses or income</p>
        </div>

        <%= form_with model: Transaction.new, url: transactions_path, method: :post, class: "p-6", id: "calendarTransactionForm" do |f| %>
          <div class="space-y-4">
            <!-- Transaction Type -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Transaction Type</label>
              <div class="grid grid-cols-2 gap-3">
                <label class="transaction-type-option cursor-pointer">
                  <%= f.radio_button :transaction_type, 'expense', 
                      checked: true, 
                      class: "hidden transaction-type-radio",
                      onchange: "updateCalendarTransactionTypeUI()" %>
                  <div class="transaction-type-card border-2 border-red-500 bg-red-50 rounded-lg p-4 text-center">
                    <svg class="w-8 h-8 mx-auto mb-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                    </svg>
                    <span class="font-semibold text-red-700">Expense</span>
                  </div>
                </label>
                
                <label class="transaction-type-option cursor-pointer">
                  <%= f.radio_button :transaction_type, 'income', 
                      class: "hidden transaction-type-radio",
                      onchange: "updateCalendarTransactionTypeUI()" %>
                  <div class="transaction-type-card border-2 border-gray-300 bg-white rounded-lg p-4 text-center hover:border-green-400">
                    <svg class="w-8 h-8 mx-auto mb-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span class="font-semibold text-green-700">Income</span>
                  </div>
                </label>
              </div>
            </div>

            <div>
              <label for="transaction_description" class="block text-sm font-medium text-gray-700 mb-1">
                <span id="calendarDescriptionLabel">What are you buying?</span>
              </label>
              <%= f.text_field :description, 
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent",
                  placeholder: "e.g., New laptop, Restaurant dinner",
                  id: "calendarTransactionDescription",
                  required: true %>
            </div>

            <div>
              <label for="transaction_amount" class="block text-sm font-medium text-gray-700 mb-1">
                <span id="calendarAmountLabel">How much will it cost?</span>
              </label>
              <div class="relative">
                <span class="absolute left-4 top-2 text-gray-500 text-lg">$</span>
                <%= f.number_field :amount, 
                    step: 0.01,
                    class: "w-full pl-8 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent",
                    placeholder: "0.00",
                    required: true,
                    min: 0.01 %>
              </div>
            </div>

            <div>
              <label for="transaction_transaction_date" class="block text-sm font-medium text-gray-700 mb-1">
                <span id="calendarDateLabel">When do you plan to buy it?</span>
              </label>
              <%= f.date_field :transaction_date, 
                  value: @date,
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent",
                  required: true %>
            </div>

            <div>
              <label for="transaction_category" class="block text-sm font-medium text-gray-700 mb-1">
                Category (optional)
              </label>
              <%= f.text_field :category, 
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent",
                  placeholder: "e.g., shopping, entertainment, food" %>
            </div>
          </div>

          <div class="mt-6 flex gap-3">
            <%= f.submit "Add Transaction", 
                class: "flex-1 bg-purple-600 text-white px-4 py-3 rounded-lg hover:bg-purple-700 transition-colors font-semibold" %>
            <button type="button" onclick="closeTransactionModal()" 
                    class="px-4 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors font-semibold">
              Cancel
            </button>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>


<script>
  function toggleDay(dayId) {
    const element = document.getElementById(dayId);
    if (element) {
      if (element.classList.contains('hidden')) {
        // Hide all other day details first
        document.querySelectorAll('[id^="day-"]').forEach(el => {
          if (el.id !== dayId) {
            el.classList.add('hidden');
          }
        });
        // Show this day's details
        element.classList.remove('hidden');
        // Smooth scroll to the details
        setTimeout(() => {
          element.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }, 100);
      } else {
        // Hide this day's details
        element.classList.add('hidden');
      }
    }
  }

  function openTransactionModal() {
    const modal = document.getElementById('transactionModal');
    modal.classList.remove('hidden');
    modal.style.display = 'flex';
    updateCalendarTransactionTypeUI(); // Initialize UI state
  }

  function closeTransactionModal() {
    const modal = document.getElementById('transactionModal');
    modal.classList.add('hidden');
    modal.style.display = 'none';
    // Reset form
    document.getElementById('calendarTransactionForm').reset();
    updateCalendarTransactionTypeUI();
  }

  function updateCalendarTransactionTypeUI() {
    const radios = document.querySelectorAll('.transaction-type-radio');
    const cards = document.querySelectorAll('.transaction-type-card');
    let selectedType = 'expense';
    
    radios.forEach((radio, index) => {
      if (radio.checked) {
        selectedType = radio.value;
        cards[index].classList.remove('border-gray-300', 'bg-white');
        if (radio.value === 'expense') {
          cards[index].classList.add('border-red-500', 'bg-red-50');
        } else {
          cards[index].classList.add('border-green-500', 'bg-green-50');
        }
      } else {
        cards[index].classList.remove('border-red-500', 'bg-red-50', 'border-green-500', 'bg-green-50');
        cards[index].classList.add('border-gray-300', 'bg-white');
      }
    });

    // Update labels based on transaction type
    if (selectedType === 'expense') {
      document.getElementById('calendarDescriptionLabel').textContent = 'What are you buying?';
      document.getElementById('calendarAmountLabel').textContent = 'How much will it cost?';
      document.getElementById('calendarDateLabel').textContent = 'When do you plan to buy it?';
      document.getElementById('calendarTransactionDescription').placeholder = 'e.g., New laptop, Restaurant dinner';
    } else {
      document.getElementById('calendarDescriptionLabel').textContent = 'What income are you receiving?';
      document.getElementById('calendarAmountLabel').textContent = 'How much will you receive?';
      document.getElementById('calendarDateLabel').textContent = 'When do you expect to receive it?';
      document.getElementById('calendarTransactionDescription').placeholder = 'e.g., Freelance work, Gift, Tax refund';
    }
  }

  // Close modal on escape key
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      closeTransactionModal();
    }
  });

  // Close modal on background click
  document.getElementById('transactionModal')?.addEventListener('click', function(event) {
    if (event.target === this) {
      closeTransactionModal();
    }
  });

</script>
