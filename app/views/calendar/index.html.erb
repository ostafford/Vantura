<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <!-- Header -->
  <div class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Vantura Calendar</h1>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            <%= link_to "← Back to Dashboard", root_path, class: "text-[#FF7A5A] dark:text-[#FF9478] hover:text-[#E86646] dark:hover:text-[#FF7A5A] font-medium" %>
          </p>
        </div>

        <% if @account %>
          <div class="flex gap-6">
            <div class="text-right">
              <p class="text-sm text-gray-600 dark:text-gray-400">Current Balance</p>
              <p class="text-2xl font-bold text-[#FF7A5A] dark:text-[#FF9478]">
                $<%= number_with_precision(@account.current_balance, precision: 2) %>
              </p>
            </div>
            <div class="text-right border-l border-gray-200 dark:border-gray-700 pl-6">
              <p class="text-sm text-gray-600 dark:text-gray-400">EOM Projection</p>
              <p class="text-2xl font-bold <%= @end_of_month_balance >= @account.current_balance ? 'text-green-600 dark:text-green-400' : 'text-orange-600 dark:text-orange-400' %>">
                $<%= number_with_precision(@end_of_month_balance, precision: 2) %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <% if @account %>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

      <!-- Month Navigation -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4 mb-6">
        <div class="flex items-center justify-between">
          <div class="flex gap-3">
            <%= link_to calendar_month_path(@date.prev_month.year, @date.prev_month.month),
                        class: "inline-flex items-center px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              Previous
            <% end %>

            <%= link_to calendar_month_path(@date.next_month.year, @date.next_month.month),
                        class: "inline-flex items-center px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors" do %>
              Next
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>

          <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
            <%= @date.strftime("%B %Y") %>
          </h2>

          <button onclick="openTransactionModal()" class="inline-flex items-center px-4 py-2 bg-[#FF7A5A] text-white rounded-lg hover:bg-[#E86646] transition-colors font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Transaction
          </button>
        </div>
      </div>

      <!-- Calendar Grid -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden chevron-fix">
        <table class="w-full">
          <thead>
            <tr class="bg-gray-100 dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700">
              <th class="px-4 py-3 text-center font-semibold text-gray-700 dark:text-gray-300 w-32">Monday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 dark:text-gray-300 w-32">Tuesday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 dark:text-gray-300 w-32">Wednesday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 dark:text-gray-300 w-32">Thursday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 dark:text-gray-300 w-32">Friday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 dark:text-gray-300 w-32">Saturday</th>
              <th class="px-4 py-3 text-center font-semibold text-gray-700 dark:text-gray-300 w-32">Sunday</th>
              <th class="px-4 py-3 text-center font-bold text-gray-700 dark:text-gray-300 bg-gray-200 dark:bg-gray-700 w-32">EOW Amount</th>
            </tr>
          </thead>
          <tbody>
            <% @weeks.each_with_index do |week, week_idx| %>
              <tr class="border-b border-gray-200 dark:border-gray-700">
                <% week.each do |day| %>
                  <% total = day_total(day[:date]) %>
                  <% transactions = day_transactions(day[:date]) %>
                  <% day_id = "day-#{day[:date].to_s}" %>
                  <% has_trans = transactions.any? %>
                  <%
                    cell_class = if !day[:in_current_month]
                      "bg-gray-50 dark:bg-gray-900"
                    elsif total > 0
                      "bg-green-50 dark:bg-green-900/20"
                    elsif total < 0
                      "bg-red-50 dark:bg-red-900/20"
                    else
                      "bg-white dark:bg-gray-800"
                    end
                  %>

                  <td class="<%= cell_class %> px-4 py-6 text-center border-r border-gray-200 dark:border-gray-700 <%= has_trans ? 'hover:bg-blue-50 dark:hover:bg-blue-900/20 cursor-pointer' : '' %> transition-all"
                      <%= raw("onclick=\"toggleDay('#{day_id}')\"") if has_trans %>>
                    <% if day[:in_current_month] %>
                      <div class="text-xs text-gray-500 dark:text-gray-400 mb-1"><%= day[:date].day %></div>
                      <div class="text-lg font-semibold <%= total < 0 ? 'text-red-600 dark:text-red-400' : 'text-green-600 dark:text-green-400' %>">
                        <% if total != 0 %>
                          <%= total < 0 ? "-" : "+" %>$<%= number_with_precision(total.abs, precision: 2) %>
                        <% else %>
                          $0.00
                        <% end %>
                      </div>
                      <% if transactions.any? %>
                        <div class="text-xs text-gray-400 dark:text-gray-500 mt-1">
                          <%= transactions.count %> <%= transactions.count == 1 ? 'item' : 'items' %>
                        </div>
                        <div class="text-xs text-blue-500 dark:text-blue-400 mt-1">Click for details</div>
                      <% end %>
                    <% end %>
                  </td>
                <% end %>

                <!-- EOW Amount -->
                <% eow_balance = @eow_amounts[week_idx] %>
                <td class="px-4 py-6 text-center font-bold text-lg <%= eow_balance < 0 ? 'bg-red-100 dark:bg-red-900/20 text-red-700 dark:text-red-400' : 'bg-green-100 dark:bg-green-900/20 text-green-700 dark:text-green-400' %> border-r border-gray-200 dark:border-gray-700">
                  <%= eow_balance < 0 ? '-' : '' %>$<%= number_with_precision(eow_balance.abs, precision: 2) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Transaction Details Sections -->
      <% @weeks.each do |week| %>
        <% week.each do |day| %>
          <% transactions = day_transactions(day[:date]) %>
          <% if transactions.any? && day[:in_current_month] %>
            <% day_id = "day-#{day[:date].to_s}" %>
            <div id="<%= day_id %>" class="hidden mt-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
              <div class="bg-blue-50 dark:bg-blue-900/20 px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                    <%= day[:date].strftime("%A, %B %d, %Y") %>
                  </h3>
                  <button onclick="toggleDay('<%= day_id %>')" class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                  </button>
                </div>
              </div>
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                  <thead class="bg-gray-50 dark:bg-gray-900">
                    <tr>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Description</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Category</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                      <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
                      <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                    <% transactions.each do |transaction| %>
                      <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 <%= transaction.is_hypothetical ? 'bg-purple-50 dark:bg-purple-900/20' : '' %>">
                        <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-300">
                          <%= transaction.description %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                          <%= transaction.category&.humanize || "Uncategorized" %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <div class="flex gap-1">
                          <% if transaction.is_hypothetical %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                              Hypothetical
                            </span>
                          <% elsif transaction.status == "HELD" %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                              Pending
                            </span>
                          <% else %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                              Settled
                            </span>
                          <% end %>
                            
                            <% if transaction.recurring? %>
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                                </svg>
                                Recurring
                              </span>
                            <% end %>
                          </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium <%= transaction.amount < 0 ? 'text-red-600 dark:text-red-400' : 'text-green-600 dark:text-green-400' %>">
                          <%= transaction.amount < 0 ? "-" : "+" %>$<%= number_with_precision(transaction.amount.abs, precision: 2) %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right">
                          <div class="flex gap-2 justify-end">
                            <% if transaction.is_hypothetical && !transaction.recurring? %>
                            <%= button_to transaction_path(transaction), method: :delete, 
                                data: { confirm: "Remove this hypothetical transaction?" },
                                class: "inline-flex items-center px-3 py-1 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors text-xs font-medium" do %>
                              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                              </svg>
                              Remove
                            <% end %>
                            <% elsif !transaction.is_hypothetical && !transaction.recurring? %>
                              <button onclick="openCalendarRecurringModal(<%= transaction.id %>, '<%= j transaction.description %>', <%= transaction.amount %>, '<%= transaction.transaction_date %>')" 
                                      class="inline-flex items-center px-3 py-1 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors text-xs font-medium">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                                </svg>
                                Make Recurring
                              </button>
                            <% elsif transaction.recurring? %>
                              <span class="inline-flex items-center px-3 py-1 bg-blue-100 text-blue-700 rounded-lg text-xs font-medium">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                                </svg>
                                Recurring
                              </span>
                          <% end %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                  <tfoot class="bg-gray-50">
                    <tr>
                      <td colspan="4" class="px-6 py-4 text-sm font-semibold text-gray-900 text-right">Day Total:</td>
                      <td class="px-6 py-4 text-sm font-bold text-right <%= day_total(day[:date]) < 0 ? 'text-red-600' : 'text-green-600' %>">
                        <%= day_total(day[:date]) < 0 ? "-" : "+" %>$<%= number_with_precision(day_total(day[:date]).abs, precision: 2) %>
                      </td>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>

      <!-- Legend -->
      <div class="mt-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
        <h3 class="font-semibold text-gray-700 dark:text-gray-300 mb-3">How to read the calendar:</h3>
        <div class="grid grid-cols-3 gap-4 text-sm">
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-green-50 border border-green-200 rounded"></div>
            <span class="text-gray-600 dark:text-gray-400">Green = Income or $0</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-red-50 border border-red-200 rounded"></div>
            <span class="text-gray-600 dark:text-gray-400">Red = Expenses (money out)</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-green-100 border border-green-200 rounded"></div>
            <span class="text-gray-600 dark:text-gray-400">EOW Green = Positive balance</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-red-100 border border-red-200 rounded"></div>
            <span class="text-gray-600 dark:text-gray-400">EOW Red = Negative balance</span>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- No Account Message -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">No account found</h2>
        <p class="text-gray-600">Please sync your Up Bank account first.</p>
      </div>
    </div>
  <% end %>

  <%= render 'shared/transaction_modal', default_transaction_date: Date.today %>

  <!-- Recurring Transaction Modal for Calendar -->
  <% if @account %>
    <div id="calendarRecurringModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 z-50 flex items-center justify-center p-4" style="display: none;">
      <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
        <div class="bg-blue-600 px-6 py-4 rounded-t-lg">
          <div class="flex items-center justify-between">
            <h3 class="text-xl font-bold text-white">Make Recurring</h3>
            <button onclick="closeCalendarRecurringModal()" class="text-white hover:text-gray-200">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <p class="text-blue-100 text-sm mt-1">Automatically project this transaction into the future</p>
        </div>

        <%= form_with url: recurring_transactions_path, method: :post, class: "p-6", id: "calendarRecurringForm" do |f| %>
          <%= f.hidden_field :transaction_id, id: "calendarRecurringTransactionId" %>
          
          <div class="space-y-4">
            <!-- Transaction Preview -->
            <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
              <p class="text-sm font-medium text-gray-700 mb-2">Transaction:</p>
              <p class="text-lg font-semibold text-gray-900" id="calendarRecurringDescription">-</p>
              <p class="text-sm text-gray-600 mt-1">Amount: <span id="calendarRecurringAmount" class="font-medium">-</span></p>
            </div>

            <!-- Frequency Selection -->
            <div>
              <label for="calendar_frequency" class="block text-sm font-medium text-gray-700 mb-2">How often does this occur?</label>
              <select name="frequency" id="calendar_frequency" required 
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <option value="">Select frequency...</option>
                <option value="weekly">Weekly (every 7 days)</option>
                <option value="fortnightly">Fortnightly (every 14 days)</option>
                <option value="monthly">Monthly</option>
                <option value="quarterly">Quarterly (every 3 months)</option>
                <option value="yearly">Yearly</option>
              </select>
            </div>

            <!-- Next Occurrence Date -->
            <div>
              <label for="calendar_next_occurrence_date" class="block text-sm font-medium text-gray-700 mb-1">
                When is the next occurrence?
              </label>
              <%= f.date_field :next_occurrence_date, 
                  id: "calendarNextOccurrenceDate",
                  class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                  required: true %>
              <p class="text-xs text-gray-500 mt-1">We'll project future occurrences from this date</p>
            </div>

            <!-- Projection Duration -->
            <div>
              <label for="calendar_projection_months" class="block text-sm font-medium text-gray-700 mb-1">
                How far ahead to project?
              </label>
              <select name="projection_months" id="calendar_projection_months" 
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <option value="indefinite" selected>Indefinite (recommended)</option>
                <option value="3">3 months</option>
                <option value="6">6 months</option>
                <option value="12">12 months</option>
                <option value="24">24 months</option>
              </select>
              <p class="text-xs text-gray-500 mt-1">Indefinite will continue projecting as you navigate future months</p>
            </div>

            <!-- Amount Tolerance -->
            <div>
              <label for="calendar_amount_tolerance" class="block text-sm font-medium text-gray-700 mb-1">
                Amount matching tolerance
              </label>
              <div class="relative">
                <span class="absolute left-4 top-2 text-gray-500">±$</span>
                <%= f.number_field :amount_tolerance, 
                    step: 0.01,
                    value: 1.0,
                    id: "calendar_amount_tolerance",
                    class: "w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                    min: 0 %>
              </div>
              <p class="text-xs text-gray-500 mt-1">Allows matching transactions with slightly different amounts</p>
            </div>

            <!-- Info Box -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-3">
              <p class="text-xs text-blue-800">
                <strong>How it works:</strong> We'll automatically add this transaction to future months in your calendar. 
                When Up Bank syncs the real transaction, we'll match and replace it automatically.
              </p>
            </div>
          </div>

          <div class="mt-6 flex gap-3">
            <%= f.submit "Create Recurring Pattern", 
                class: "flex-1 bg-blue-600 text-white px-4 py-3 rounded-lg hover:bg-blue-700 transition-colors font-semibold" %>
            <button type="button" onclick="closeCalendarRecurringModal()" 
                    class="px-4 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors font-semibold">
              Cancel
            </button>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>


<script>
  function toggleDay(dayId) {
    const element = document.getElementById(dayId);
    if (element) {
      if (element.classList.contains('hidden')) {
        // Hide all other day details first
        document.querySelectorAll('[id^="day-"]').forEach(el => {
          if (el.id !== dayId) {
            el.classList.add('hidden');
          }
        });
        // Show this day's details
        element.classList.remove('hidden');
        // Smooth scroll to the details
        setTimeout(() => {
          element.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }, 100);
      } else {
        // Hide this day's details
        element.classList.add('hidden');
      }
    }
  }

  // Recurring Transaction Modal Functions for Calendar
  let currentCalendarRecurringTransactionId = null;
  let currentCalendarTransactionDate = null;
  
  function openCalendarRecurringModal(transactionId, description, amount, transactionDate) {
    currentCalendarRecurringTransactionId = transactionId;
    currentCalendarTransactionDate = transactionDate;
    
    document.getElementById('calendarRecurringTransactionId').value = transactionId;
    document.getElementById('calendarRecurringDescription').textContent = description;
    
    const formattedAmount = (amount < 0 ? '-' : '+') + '$' + Math.abs(amount).toFixed(2);
    const amountColor = amount < 0 ? 'text-red-600' : 'text-green-600';
    document.getElementById('calendarRecurringAmount').textContent = formattedAmount;
    document.getElementById('calendarRecurringAmount').className = 'font-medium ' + amountColor;
    
    // Update next occurrence date when frequency changes
    updateCalendarNextOccurrenceDate();
    
    const modal = document.getElementById('calendarRecurringModal');
    modal.classList.remove('hidden');
    modal.style.display = 'flex';
  }
  
  function updateCalendarNextOccurrenceDate() {
    const frequency = document.getElementById('calendar_frequency').value;
    if (!frequency || !currentCalendarTransactionDate) return;
    
    const txnDate = new Date(currentCalendarTransactionDate);
    let nextDate = new Date(txnDate);
    
    switch(frequency) {
      case 'weekly':
        nextDate.setDate(nextDate.getDate() + 7);
        break;
      case 'fortnightly':
        nextDate.setDate(nextDate.getDate() + 14);
        break;
      case 'monthly':
        nextDate.setMonth(nextDate.getMonth() + 1);
        break;
      case 'quarterly':
        nextDate.setMonth(nextDate.getMonth() + 3);
        break;
      case 'yearly':
        nextDate.setFullYear(nextDate.getFullYear() + 1);
        break;
    }
    
    // Format as YYYY-MM-DD for date input
    const formatted = nextDate.toISOString().split('T')[0];
    document.getElementById('calendarNextOccurrenceDate').value = formatted;
  }
  
  // Add event listener for frequency change
  document.getElementById('calendar_frequency')?.addEventListener('change', updateCalendarNextOccurrenceDate);
  
  function closeCalendarRecurringModal() {
    const modal = document.getElementById('calendarRecurringModal');
    modal.classList.add('hidden');
    modal.style.display = 'none';
    document.getElementById('calendarRecurringForm').reset();
    currentCalendarRecurringTransactionId = null;
  }
  
  // Close recurring modal on escape key (in addition to transaction modal)
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      closeCalendarRecurringModal();
    }
  });
  
  // Close recurring modal on background click
  document.getElementById('calendarRecurringModal')?.addEventListener('click', function(event) {
    if (event.target === this) {
      closeCalendarRecurringModal();
    }
  });

</script>
